{% extends layouts.base %}

{# ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ #}
{# DEFINE BLOCK - CONTENT #}
{# ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ #}
{% block content %}

  {# ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ #}
  {# DEFINE BLOCK - MAIN #}
  {# ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ #}
  {% block main %}

    <section class="container container--page">
      {% embed layouts.columns3x9 %}

        {# ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ #}
        {# DEFINE BLOCK - ASIDE #}
        {# ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ #}
        {% block aside %}

          {% include '_includes/groups/navigation/my-account-nav.html.twig' %}

        {% endblock %}

        {# ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ #}
        {# DEFINE BLOCK - MAIN #}
        {# ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ #}
        {% block main %}

          <h2 class="mb-5">Pay Avon</h2>

          <hr>

          <!-- START - PAYMENT AMOUNT SECTION -->
          <div class="">

            <p><strong>How much are you paying today?</strong></p>

            <div class="ml-4">

              <div class="form-group">
                {% include components.elements.forms.radio with {
                    name: 'pay-option',
                    classes: 'd-inline',
                    theValue: 'credit',
                    theLabel: '<b>-$1.00</b> (Current balance as of March 08, 2018 at 03:15 PM EST)'
                  } %}

                  <a href="javascript:void(0)" class="lt-icon lt-tip lt-medium align-middle no-underline"
                    data-container="body"
                    data-toggle="popover"
                    data-placement="bottom"
                    data-content="Vivamus sagittis lacus vel augue laoreet rutrum faucibus.">
                  </a>

              </div>

              <div class="form-group">
                {% include components.elements.forms.radio with {
                  name: 'pay-option',
                  classes: 'd-inline',
                  theValue: 'credit',
                  theLabel: '<b>$0.00</b> (Amount Due with Campaign 07)'
                } %}

                <a href="javascript:void(0)" class="lt-icon lt-tip lt-medium align-middle no-underline"
                  data-toggle="modal" data-target="#amount-due">
                </a>

                {# MODAL - AMOUNT DUE #}
                {% include "_includes/modules/account/pay-avon-amount-due-modal.html.twig" %}

              </div>

              <div class="form-group has-error">

                <div class="">

                  {% include components.elements.forms.radio with {
                    name: 'pay-option',
                    classes: 'd-inline',
                    theValue: 'credit',
                    theLabel: '<b>Other Amount: $</b>',
                    checked: true
                  } %}

                  {% include components.elements.forms.input with {
                    placeholder: '',
                    theValue: '25,000.23',
                    classes: 'input-sm form-control form-control-inline'
                  } %}

                  <a href="javascript:void(0)" class="lt-icon lt-tip lt-medium align-middle ml-2 no-underline" data-container="body" data-toggle="popover" data-placement="bottom" data-content="Vivamus sagittis lacus vel augue laoreet rutrum faucibus."></a>

                </div>

              </div>

              <p class="text-danger"><strong>
                Sorry, we are unable to process this request. Please review payment amount to ensure it is not greater than $25,000 or does not exceed your balance by more than $1,000.
              </strong></p>

            </div>

          </div>
          <!-- END - PAYMENT AMOUNT SECTION -->

          <!-- START - PAYMENT TYPE SECTION -->
          <div class="pt-5">

            <p><strong>Please select a payment type:</strong></p>

            <div class="ml-4">

              <!-- START - PAY TYPE - QUICKPAY -->

              <!-- Developer note: The following demonstrates three "QUICKPAY STATES" for the QuickPAY radio button.-->

              <!-- START - QUICKPAY STATE - ENROLLED -->
              <div class="form-group">
                {% include components.elements.forms.radio with {
                  name: 'pay-type',
                  theValue: 'quick-pay',
                  theLabel: '<b>QuikPAY</b> (you are enrolled. <u><a href="#">Edit</a></u>)',
                  dataAttrs: 'data-toggle="collapse" data-target="#collapse-quickpay-pin:not(.in)"',
                  disabled: false,
                  checked: true,
                } %}

                <!-- START - ONLY SHOW WHEN RADIO BUTTON IS SELECTED -->
                <!-- Developer note: This gets shown when this radio is selected. It relies on "data-toggle" and "data-target". Demo: aqw3^ -->
                <!-- Developer note: Add class has-error if there is an error. -->
                <div id="collapse-quickpay-pin" class="form-group has-error panel-collapse in mb-3">
                  <span>Please enter your 4-digit PIN code:</span>
                  <input type="text" class="input-sm mb-3" size="6" maxlength="4">
                  <a href="javascript:void(0)" class="lt-icon lt-tip lt-medium align-middle no-underline"
                    data-container="body"
                    data-toggle="popover"
                    data-placement="bottom"
                    data-content="Vivamus sagittis lacus vel augue laoreet rutrum faucibus.">
                  </a>
                  <br/>
                  <span>Please enter your 4-digit PIN code:</span>
                  <input type="text" class="input-sm form-control form-control-inline" size="6" maxlength="4">
                  <a href="javascript:void(0)" class="lt-icon lt-tip lt-medium align-middle no-underline"
                    data-container="body"
                    data-toggle="popover"
                    data-placement="bottom"
                    data-content="Vivamus sagittis lacus vel augue laoreet rutrum faucibus.">
                  </a>

                  <!-- Developer note: Show if there is an error. -->
                  <p class="m-0 text-danger"><b>Field PIN is mandatory, please fill it in.</b></p>

                </div>
                <!-- END - ONLY SHOW WHEN RADIO BUTTON IS SELECTED -->
              </div>
              <!-- END - QUICKPAY STATE - ENROLLED -->

              <!-- START - QUICKPAY STATE - NOT ENROLLED -->
              <div class="form-group">
                <!-- Developer note: This is disabled. -->
                {% include components.elements.forms.radio with {
                  name: 'pay-type',
                  theValue: 'quick-pay',
                  theLabel: '<em>QuikPAY</em>  <b>You are not enrolled.</b> <button class="btn btn-default btn-sm" data-toggle="modal" data-target="#checkout-quickpay-enrollment-modal"><a class="text-capitalize">Enroll Now</a></button>',
                  dataAttrs: 'data-toggle="collapse" data-target="#collapse-quickpay-pin:not(.in)"',
                  disabled: true
                } %}

                <div>
                  <p><em>QuickPAY is the safer, easier way to pay online without revealing your credit card number.</em></p>
                </div>
              </div>
              <!-- END - QUICKPAY STATE - NOT ENROLLED -->

              <!-- START - QUICKPAY STATE - ENROLLMENT IN PROCESS -->
              <div class="form-group">
                <!-- Developer note: This is disabled. -->
                {% include components.elements.forms.radio with {
                  name: 'pay-type',
                  theValue: 'quick-pay',
                  theLabel: 'QuikPAY <strong class="text-danger">(Account is currently being processed)</strong>',
                  dataAttrs: 'data-toggle="collapse" data-target="#collapse-quickpay-pin:not(.in)"',
                  disabled: true
                } %}
                <div>
                  <p><em>The enrollment process takes 6 days to complete from the date you submitted your request. Once the enrollment process has completed, please activate your QuikPAY account by calling 1-877-QuikPAY (1-877-784-5729) and resetting your PIN #. After activating your QuikPAY Pin, please allow 24 hours before it updates on the site.</em></p>
                </div>
              </div>
              <!-- END - QUICKPAY STATE - ENROLLMENT IN PROCESS -->

              <!-- END - PAY TYPE - QUICKPAY -->

              <!-- START - PAY TYPE - CREDIT CARD -->
              <div class="form-group">
                {% include components.elements.forms.radio with {
                  name: 'pay-type',
                  classes: '',
                  theValue: 'cc-cards',
                  theLabel: 'Credit Card(s)',
                  dataAttrs: 'data-toggle="collapse" data-target="#collapse-quickpay-pin.in"'
                } %}
              </div>
              <!-- END - PAY TYPE - CREDIT CARD -->


              <div class="ml-sm-4">
                <div class="row">
                  <div class="col-sm-6">
                    <div class="form-group">
                    <p class="mb-3 font-weight-bold">Card Number</p>
                    {% include components.elements.forms.input with {
                      placeholder: ''
                    } %}
                    </div>

                    <div class="form-group">
                      {% include components.elements.forms.input with {
                        placeholder: ''
                      } %}
                    </div>

                    <div class="form-group">
                    <p class="mb-3 font-weight-bold">Name on Card</p>
                      {% include components.elements.forms.input with {
                        placeholder: ''
                      } %}
                    </div>

                    <div class="row">

                      <div class="col-xs-12 col-sm-9 mb-4 mb-sm-0">
                      <p class="mb-3 font-weight-bold">Expiration Date</p>

                        <div class="row">
                          <div class="col-xs-12 col-sm-7 mb-4 mb-sm-0">
                            <select class="form-control form-inline">
                              <option>05 - May</option>
                              <option>06 - June</option>
                              <option>07 - July</option>
                              <option>08- Aug</option>
                            </select>
                            <span class="lt-icon lt-triangle-down form-control-feedback mr-4"></span>
                          </div>
                          <div class="col-xs-12 col-sm-5">
                            <select class="form-control form-inline">
                              <option>1984</option>
                              <option>1985</option>
                              <option>1986</option>
                              <option>1987</option>
                            </select>
                            <span class="lt-icon lt-triangle-down form-control-feedback mr-4"></span>
                          </div>
                        </div>

                      </div>

                      <div class="col-xs-12 col-sm-3">
                      <p class="mb-3 font-weight-bold">CVV<span class="lt-icon lt-info lt-medium align-middle no-underline"></span></p>

                        {% include components.elements.forms.input with {
                          placeholder: '357'
                        } %}

                      </div>
                    </div>



                    <div class="pt-3">
                      <h6 class="mb-4 pt-4">billing Address</h6>
                      <p class="mb-3">Address</p>
                      <div class="form-group">
                        {% include components.elements.forms.input with {
                          placeholder: '1234 Westminster Junction'
                        } %}
                      </div>
                      <div class="form-group">
                        {% include components.elements.forms.input with {
                          placeholder: 'Unit #3289W'
                        } %}
                      </div>
                      <div class="row">
                        <div class="col-md-6">
                        <p class="mb-3 text-danger"><strong>ZIP</strong></p>
                          <div class="form-group">
                          {% include components.elements.forms.input with {
                            placeholder: '',
                          } %}
                          <small class="mb-3 text-danger"><strong>This field is mandatory</strong></small>
                          </div>
                        </div>
                        <div class="col-md-6">
                        <p class="mb-3">City</p>
                          <div class="form-group">
                            {% include components.elements.forms.input with {
                              placeholder: 'Albuquerque'
                            } %}
                          </div>
                        </div>
                      </div>

                      <div class="row">
                        <div class="col-md-5">
                        <p class="mb-3">State</p>
                          <div class="form-group has-feedback">
                            <select class="form-control">
                              <option>AK - Alaska</option>
                              <option>State 1</option>
                              <option>State 2</option>
                              <option>State 3</option>
                            </select>
                            <span class="lt-icon lt-triangle-down form-control-feedback"></span>
                          </div>
                        </div>
                        <div class="col-md-7">
                        <p class="mb-3">Country</p>
                        <div class="form-group has-feedback">
                          <select class="form-control">
                            <option>United States</option>
                            <option>Country 1</option>
                            <option>Country 2</option>
                            <option>Country 3</option>
                          </select>
                          <span class="lt-icon lt-triangle-down form-control-feedback"></span>
                        </div>
                        </div>
                      </div>



                      {# MODAL - PAY AVAON REVIEW #}
                      {% include "_includes/modules/account/pay-avon-review-modal.html.twig" %}
                    </div>

                    <div class="row">
                      <div class="col-md-4 mt-4">
                    <!-- START - Continue Button -->
                    <a class="btn btn-primary btn-sm d-block" disabled="disabled" data-toggle="modal" data-target="#pay-avon-review">Continue</a>
                    <!-- END - Continue Button -->
                      </div>

                      <div class="col-md-4 mt-4">
                    <!-- START - Continue Button -->
                    <a class="btn btn-primary btn-sm d-block" data-toggle="modal" data-target="#modal-either-or">Continue</a>
                    <!-- END - Continue Button -->
                      </div>
                    </div>


                  </div>
                </div>
              </div>
            </div>
          </div>
          <!-- END - PAYMENT TYPE SECTION -->

        {% endblock %}

      {% endembed %}
    </section>

  {% endblock %}

  <!-- START - MODAL - QUICKPAY ENROLLMENT -->
  {% include "_includes/modules/checkout/checkout-quickpay-enrollment-modal.html.twig" %}
  <!-- END - MODAL - QUICKPAY ENROLLMENT -->

  <!-- START - MODAL - QUICKPAY ENROLLMENT REVIEW -->
  {% include "_includes/modules/checkout/checkout-quickpay-enrollment-review-modal.html.twig" %}
  <!-- END - MODAL - QUICKPAY ENROLLMENT REVIEW -->

  <!-- START - MODAL - QUICKPAY ENROLLMENT SUCCESS -->
  {% include "_includes/modules/checkout/checkout-quickpay-enrollment-success-modal.html.twig" %}
  <!-- END - MODAL - QUICKPAY ENROLLMENT SUCCESS -->

  <!-- START - MODAL - QUICKPAY ENROLLMENT LEARN MORE -->
  {% include "_includes/modules/checkout/checkout-quickpay-enrollment-learn-more-modal.html.twig" %}
  <!-- END - MODAL - QUICKPAY ENROLLMENT LEARN MORE -->

  <!-- MODAL - QUICKPAY ENROLLMENT LEARN MORE -->
  {% include "_includes/modules/checkout/checkout-quickpay-enrollment-learn-more-modal.html.twig" %}

  <!-- MODAL - QUICKPAY ENROLLMENT REVIEW -->
  {% include "_includes/modules/checkout/checkout-quickpay-enrollment-review-modal.html.twig" %}

{% endblock %}
