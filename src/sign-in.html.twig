{% extends "_layouts/base-simple-header.html.twig" %}


{# ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ #}
{# DEFINE BLOCK - CONTENT #}
{# ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ #}
{% block content %}

  <section class="container container--page">
    {% embed layouts.columns6max %}

      {# ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ #}
      {# DEFINE BLOCK - MAIN #}
      {# ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ #}
      {% block main %}

        <h1>Representative Sign-in</h1>

        <div class="my-5">

          <!-- START - INLINE LEVEL ALERT -->
          {% include "_includes/groups/alerts/alert-level-template.html.twig" with {
            alertIcon: 'lt-warning-fill',
            alertHeadline: 'Alert message',
            alertBody: '
            <ul class="alert-list">
              <li>Here is a <a href="#" class="alert-link">Link</a>.</li>
              <li>' ~ fpo.sentence ~ '</li>
            </ul>
            <p>' ~ fpo.sentence ~ ' ' ~ fpo.sentence ~ '</p>',
            alertBtnText: null,
            alertClasses: 'alert-danger',
            alertLevel: 'content',
            alertDismissable: false,
            alertId: null
          } %}
          <!-- END - INLINE LEVEL ALERT -->

          <!-- START - FORM -->
          {% include "_includes/modules/sign-in/sign-in-email-password-inputs.html.twig" %}

          <button type="button" class="btn btn-primary btn-block">Sign-in</button>

          {% include "_includes/elements/misc/divider-with-or.html.twig" %}
          {% include "_includes/modules/sign-in/sign-in-via-social.html.twig" %}

          <!-- END - FORM -->

        </div>

        <hr>

        <div class="text-center">Need an account? <a href="#">Register today</a></div>

      {% endblock %}

    {% endembed %}

  </section>

{% endblock %}




