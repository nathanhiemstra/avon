<!-- START - MODAL -->
<section class="modal fade {{ modalClasses }}" id="{{ modalId }}" tabindex="-1" role="dialog" aria-labelledby="{{ modalId }}" aria-hidden="true">
  <div class="modal-dialog {{ modalSizeClass }}">
    <div class="modal-content">

      {# ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ #}
      {# RENDER BLOCK - modalHeader #}
      {# ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ #}
      {% set _block = block('modalHeader') %}
      {% if _block is not empty %}

          <div class="modal-header">
            {{ _block|raw }}
          </div>

      {% endif %}



      {# ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ #}
      {# RENDER BLOCK - modalHeaderMessage #}
      {# ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ #}
      {% set _block = block('modalHeaderMessage') %}
      {% if _block is not empty %}

          <div class="modal-header-message">
            {{ _block|raw }}
          </div>

      {% endif %}



      <div class="modal-body">

        {# ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ #}
        {# RENDER BLOCK - modalBody #}
        {# ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ #}
        {% block modalBody %}{% endblock %}

      </div>

      {# ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ #}
      {# RENDER BLOCK - modalFooter #}
      {# ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ #}
      {% set _block = block('modalFooter') %}
      {% if _block is not empty %}

          <div class="modal-footer">
            {{ _block|raw }}
          </div>

      {% endif %}

    </div>
  </div>
</section>
<!-- END - MODAL -->
