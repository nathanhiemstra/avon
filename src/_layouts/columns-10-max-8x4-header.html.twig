<div class="container">

  <div class="row">

    <div class="col-md-10 col-md-offset-1">

      <header class="col-md-12" role="header">
        {% block contentheader %}{% endblock %}
      </header>

      <main class="col-md-8" role="main">
        {% block main %}{% endblock %}
      </main>

      <aside class="col-md-4">
        <!-- TODO :: the affix offset should be dynamic -->
        <div class="affix--aside-col-4" role="complementary" data-spy="affix" data-offset-top="600">
          {% block aside %}{% endblock %}
        </div>
      </aside>

    </div>

  </div>

</div>
