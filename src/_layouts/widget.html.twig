{% if widgetLayout == 'flex-column' %}
  {% set classes = 'layout-flex-column' %}
{% endif %}

<!-- START - WIDGET -->
  <section class="widget {{ classes }}" id ="{{ widgetId }}">

    {# ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ #}
    {# RENDER BLOCK - widgetHeader #}
    {# ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ #}
    {% set _block = block('widgetHeader') %}
    {% if _block is not empty %}

      <div class="widget-header">
        {{ _block|raw }}
      </div>

    {% endif %}

    {# ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ #}
    {# RENDER BLOCK - widgetBody #}
    {# ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ #}
    {% set _block = block('widgetBody') %}
    {% if _block is not empty %}

      <div class="widget-body my-4">
        {{ _block|raw }}
      </div>

    {% endif %}

    {# ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ #}
    {# RENDER BLOCK - widgetFooter #}
    {# ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ #}
    {% set _block = block('widgetFooter') %}
    {% if _block is not empty %}

      <div class="widget-footer">
        {{ _block|raw }}
      </div>

    {% endif %}

  </section>
<!-- END - WIDGET -->
