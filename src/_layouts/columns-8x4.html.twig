{% if contentSplit is not defined %}
  {% set contentSplit = false %}
{% endif %}

<div class="row" {% if contentSplit %} data-split-content {% endif %}>
  <main class="col-md-8" role="main">
    {% block main %}{% endblock %}
  </main>
  <aside class="col-md-4" role="complementary">
    {% block aside %}{% endblock %}
  </aside>
</div><!-- /.row -->
