  <![endif]-->

  <!-- Favicons -->
  <link rel="apple-touch-icon-precomposed" sizes="144x144" href="../assets/ico/apple-touch-icon-144-precomposed.png">
  <link rel="shortcut icon" href="/images/ico/favicon.ico">
</head>


{% set _block = block('reverseBg') %}
{% if _block is not empty %}
    {% set bodyClasses = 'class="reverse-bg"' %}
    {% set reverseBgUndoStart = '<div class="reverse-bg-undo">' %}
    {% set reverseBgUndoEnd = '</div><!-- /.reverse-bg-undo -->' %}
{% endif %}
<body {{ bodyClasses }}>

  <!-- START - PAGE CONTENT -->
  <section id="avon-poc">
      <a class="sr-only" href="#content">Skip to main content</a>

      {# ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ #}
      {# RENDER BLOCK - HEADER #}
      {# ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ #}
      {% block header %}
        {% include components.modules.global.header %}
      {% endblock %}

      <div class="global-content-overlay hidden"></div>

      {# ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ #}
      {# RENDER BLOCK - CONTENT #}
      {# ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ #}
      {% block content %}{% endblock %}

      {# ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ #}
      {# RENDER BLOCK - FOOTER #}
      {# ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ #}
      {% block footer %}
        {% include components.modules.global.footer %}
      {% endblock %}

  </section>
  <!-- END - PAGE CONTENT -->

  <script src="./js/vendor/jquery/1.10.2/jquery.min.js"></script>
  <script src="./js/vendor/jquery.autocomplete.min.js"></script>
  <script src="./js/vendor/bootstrap.js"></script>
  <script src="./js/vendor/holder.js"></script>
  <script src="./js/avon-main.js"></script>
  <script src="./js/modules/brochures.js"></script>
  <script src="./js/modules/checkoutDemo.js"></script>
  <script src="./js/modules/formDemo.js"></script>
  <script src="./js/fakeData.js"></script>
  <!-- TODO :: probably want to bundle the above scripts with a gulp task
            :: and remove the fake data, of course -->
