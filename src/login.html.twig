{# login.html.twig #}
{% extends "_layouts/base.html.twig" %}

{% block content %}
  <div class="container">
    {% include module.organism.global.header  %}
    <div class="page-header">
      <div class="row">
        <div class="col-sm-1">
          <h1>Login</h1>
        </div>
      </div>
    </div>
    
    <div class="row">
      <div class="col-md-4">
        <form role="form">
          <div class="form-group">
            <label for="exampleInputEmail1">Email address</label>
            <input type="email" class="form-control" id="exampleInputEmail1" placeholder="Enter email">
          </div>
          <div class="form-group">
            <label for="exampleInputPassword1">Password</label>
            <input type="password" class="form-control" id="exampleInputPassword1" placeholder="Password">
          </div>
          <div class="form-group">
            <button type="submit" class="btn btn-primary btn-block">Submit</button>
          </div>
          <div class="form-group">
            <div class="checkbox">
              <label>
                <input type="checkbox"> Keep me signed in
              </label>
            </div>
          </div>
        </form>
        <div class="text-center">
          <p>Or</p>
          <button type="submit" class="btn btn-primary btn-block">Continue with Facebook</button>
          <button type="submit" class="btn btn-primary btn-block">Continue with Google</button>
        </div>
        
      </div>
      <div class="col-md-4">
        <p><button type="submit" class="btn btn-default">Create an Account</button></p>
        <p><a href="#">Shop as a guest</a></p>
      </div>
    </div>
  {% endblock %}