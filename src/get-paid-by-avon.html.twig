{% extends layouts.base %}

{# ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ #}
{# DEFINE BLOCK - CONTENT #}
{# ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ #}
{% block content %}

  {# ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ #}
  {# DEFINE BLOCK - MAIN #}
  {# ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ #}
  {% block main %}

    <section class="container container--page">
      {% embed '_layouts/columns-3x9-secondary-nav.html.twig' %}

        {# ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ #}
        {# DEFINE BLOCK - ASIDE #}
        {# ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ #}
        {% block aside %}

          {% include '_includes/groups/navigation/my-account-nav.html.twig' with { active : 'get-paid-by-avon' } %}

        {% endblock %}

        {# ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ #}
        {# DEFINE BLOCK - MAIN #}
        {# ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ #}
        {% block main %}

          <h2>Get Paid by Avon</h2>
          <p class="text-muted">Get all your payments from Avon quickly and easily with automatic deposits. Earnings incentives, rewards and credits go sraight to your account!</p>

          <hr>

          <section>

            <h5 class="my-3 text-uppercase">Let Avon directly deposit to the bank account of your choice</h5>
            <p class="text-muted">Recommended! The safest and fastest way to get paid.</p>

            <div class="row my-5">
              <div class="col-sm-6">
                <h6 class="m-0">Traditional Earnings</h6>
                <p>Traditional / non-estore sales earnings
                  <br>
                  (Leadership earnings, incentive pay-outs, etc).</p>
              </div>
              <div class="col-sm-6">
                <button class="btn btn-sm btn-primary" data-toggle="modal" data-target="#sign-up-with-an-account">Sign Up</button>
              </div>
            </div>

            <div class="row my-5">
              <div class="col-sm-6">
                <h6 class="m-0">Online Earnings</h6>
                <p>Online / eStore sales earnings</p>
              </div>
              <div class="col-sm-6">
                <button class="btn btn-sm btn-primary" data-toggle="modal" data-target="#select-an-account">Sign Up</button>
              </div>
            </div>

          </section>

          <hr>

          <section>

            <h5 class="my-3 text-uppercase">Start Saving with Avon's savings plan</h5>
            <p class="text-muted">Recommended! The easiest way to ensure a financially secure future.</p>

            <div class="row my-5">
              <div class="col-sm-6">
                <h6 class="m-0">Saving Plan</h6>
                <a href="javascript:void(0)" class="underline" data-toggle="modal" data-target="#savings-plan">Learn More</a>
              </div>
              <div class="col-sm-6">
                <button class="btn btn-sm btn-primary">Sign Up</button>
              </div>
            </div>

          </section>

          <hr>

          <section>
            <h5 class="my-3 text-uppercase">Get a Pre-Paid card in the mail</h5>
            <p class="text-muted">If you do not enroll in the direct deposit options above. Avon will automatically mail you a Citibank pre-paid card. After that, every time Avon is suppossed to pay you, our card will be loaded with specific amount.</p>
            <p class="text-muted">Question? Check out the
              <a href="#" class="underline">FAQ</a>.
            </p>
            <button class="btn btn-sm btn-primary">Verify your card balance</button>
          </section>

          <!-- START - SIGN UP WITH ACCOUNT MODAL -->
          {% include "_includes/modules/account/sign-up-with-account-modal.html.twig" %}
          <!-- END - SIGN UP WITH ACCOUNT MODAL -->

          <!-- START - SELECT ACCOUNT MODAL -->
          {% include "_includes/modules/account/select-account-modal.html.twig" %}
          <!-- END - SELECT ACCOUNT MODAL -->

          <!-- START - CANCEL ENROLLMENT MODAL -->
          {% include "_includes/modules/account/cancel-an-account.html.twig" %}
          <!-- END - CANCEL ENROLLMENT MODAL -->

          <!-- START - SAVINGS PLAN MODAL -->
          {% include "_includes/modules/account/savings-plan.html.twig" %}
          <!-- END - SAVINGS PLAN MODAL -->

          <!-- START - ROUTING NUMBER MODAL -->
          {% include "_includes/modules/account/routing-number.html.twig" %}
          <!-- END - ROUTING NUMBER MODAL -->

        {% endblock %}

      {% endembed %}
    </section>

  {% endblock %}

{% endblock %}
