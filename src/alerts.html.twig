{% extends layouts.base %}

{# ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ #}
{# DEFINE BLOCK - CONTENT #}
{# ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ #}
{% block content %}

  {% embed layouts.columns12 %}

    {# ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ #}
    {# DEFINE BLOCK - MAIN #}
    {# ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ #}
    {% block main %}

      <!-- START - HEADER LEVEL - ERROR -->
      {% include "_includes/modules/global/alert-level-header.html.twig" with {
          'alertId': null,
          'alertClasses': 'alert-danger',
          'alertIcon': 'lt-warning',
          'alertMsg': 'Header level - persistent',
          'alertBtnText': null,
          'alertDismissable': false
        }
      %}
      <!-- END - HEADER LEVEL - ERROR -->

      <!-- START - HEADER LEVEL - SUCCESS -->
      {% include "_includes/modules/global/alert-level-header.html.twig" with {
          'alertId': null,
          'alertClasses': 'alert-success',
          'alertIcon': 'lt-checkmark',
          'alertMsg': 'Header level - dismissable',
          'alertBtnText': 'Optional button',
          'alertDismissable': true
        }
      %}
      <!-- END - HEADER LEVEL - SUCCESS -->
    
      <section class="container container--page">

         <!-- START - SECTION LEVEL -->
        {% include "_includes/modules/global/alert-level-page-and-section.html.twig" with {
            'alertId': null,
            'alertClasses': 'alert-danger',
            'alertIcon': 'lt-warning',
            'alertMsg': ' Page level',
            'alertMsgBody': null,
            'alertBtnText': false,
            'alertLevel': 'page'
          }
        %}
        <!-- END - SECTION LEVEL -->

        <h1 class="mb-5">Alerts</h1>
        <h3>Header level</h3>
        <p>Header level alerts go between the header and content and span the width of the window. Icons and buttons are optional. Dismissable alerts become sticky to the top of the window once you scroll down far enough. They have a dark background. </p>

        <h3>Page level</h3>
        <p>Page level alerts are the first item at the top of the content area and go the content and  width of the content area. They have a dark background. </p>

        <h3>Section level</h3>
        <p>Section level alerts usually are at the top of a section, but can be inserted anywhere. They fill op the width of their parent container. They can contain any trpe of content. However, if it's just one line, it is structured and styled slightly differently. They have a light background.</p>

        <!-- START - SECTION LEVEL -->
        {% include "_includes/modules/global/alert-level-page-and-section.html.twig" with {
            'alertId': null,
            'alertClasses': 'alert-danger',
            'alertIcon': 'lt-warning',
            'alertMsg': ' Section level',
            'alertMsgBody': null,
            'alertBtnText': false,
            'alertLevel': 'section'
          }
        %}
        <!-- END - SECTION LEVEL -->


        <!-- START - SECTION LEVEL - WITH RICH TEXT -->
        {% include "_includes/modules/global/alert-level-page-and-section.html.twig" with {
            'alertId': null,
            'alertClasses': 'alert-info',
            'alertIcon': 'lt-warning',
            'alertMsg': 'Section level - with rich text',
            'alertMsgBody': '
              <p>' ~ fpo.paragraph ~ '</p>
              <p><a href="#">' ~ fpo.sentence ~ '</a></p>
            ',
            'alertBtnText': false,
            'alertDismissable': false,
            'alertLevel': 'section'
          }
        %}
        <!-- END - SECTION LEVEL - WITH RICH TEXT -->


     
        <p>{{ fpo.paragraph }}</p>
        <p>{{ fpo.paragraph }}</p>
        <p>{{ fpo.paragraph }}</p>
        <p>{{ fpo.paragraph }}</p>
