{% if isFirstItem %}
  {% set classes = ' active ' %}
{% endif %}
<!-- START - SINGLE SLIDE -->
<div class="item  {{ classes }}">
  <div class="box-group--item box-emphasize">

    {% if hasToolbar %}
    <!-- START - TOOLBAR (CUSTOMIZE DASHBOARD) -->
    <div class="toolbar">
      <span class="badge">{{ loopIndex }}</span>
      <a href="javascript:void(0)" class="underline">Change</a>
    </div>
    <!-- END - TOOLBAR (CUSTOMIZE DASHBOARD) -->
    {% endif %}

    <div class="item-content">

      <!-- START - FPO CONTENT -->
      <img src="{{ src }}" alt="FPO image">
      <!-- END - FPO CONTENT -->

    </div>
  </div><!-- /.box-group-item -->
</div><!-- /.item -->
<!-- END - SINGLE SLIDE -->

