{% if carouselId %}
  {% if isFirstItem %}
    {% set classes = ' active ' %}
  {% endif %}
  {% set toolbarDataAttrs = ' data-toggle="modal" data-target="#' ~ carouselId ~ '"'  %}
{% endif %}


<!-- START - SINGLE SLIDE -->
<div class="item  {{ classes }}">
  <div class="box-group--item box-emphasize">

    {% if hasToolbar %}
    <!-- START - TOOLBAR (CUSTOMIZE DASHBOARD) -->
    <div class="toolbar">
      <span class="badge">{{ loopIndex }}</span>
      <a href="#" class="change-widget-trigger underline"{{ toolbarDataAttrs }}>Change</a>
    </div>
    <!-- END - TOOLBAR (CUSTOMIZE DASHBOARD) -->
    {% endif %}

    <div class="item-content">

      <!-- START - FPO CONTENT -->
      <img src="{{ src }}" alt="FPO image" class="widget-img">
      <!-- END - FPO CONTENT -->

    </div>
  </div><!-- /.box-group-item -->
</div><!-- /.item -->
<!-- END - SINGLE SLIDE -->

