{% if position == 'bottom' %}
  {% set classes = 'bottom' %}
{% elseif position == 'within' %}
  {% set classes = 'within' %}
{% else %}
  {% set classes = 'top' %}
{% endif %}
{% if extraSpacing %}
  {% set extraSpacingClass = ' pt-' ~  extraSpacing %}
{% else %}
  {% set extraSpacingClass = ' pb-' ~  extraSpacing %}
{% endif %}

<!-- START - GENERIC CONTENT BLOCK -->
<div class="generic-content-block {{ classes }}{{ extraSpacingClass }}">
  <div class="reverse-bg py-3">
    <p class="m-0 text-center text-muted">Mangolia Managed Content Block</p>
  </div>
</div>
<!-- END - GENERIC CONTENT BLOCK -->
