<li class="list-group-item my-4">

  <!-- SUMMARY -->
  <dl class="clearfix m-0">
    <dt class="pull-left">
      <a href="#collapse-{{ indexNum }}" data-toggle="collapse" {% if collapsed != false %} class="collapsed" {% endif %}>
        <span class="glyphicon glyphicon-play collapse-indicator"></span> 
        {{ personName }} {{collapsed}}
      </a>
    </dt>
    <dd class="pull-right">${{ total }}</dd>
  </dl>

  <dl class="clearfix m-0">
    <dt class="pull-left">{{ itemCount }} items</dt>
    <dd class="pull-right">Discount: $45.55</dd>
  </dl> 

  <!-- DETAILS -->
  <div class="details collapse {% if collapsed == false %} in {% endif %}" id="collapse-{{ indexNum }}">


    <div class="table-responsive">
      <table class="table">
        <thead>
          <tr>
            <th>Item</th>
            <th>Description</th>
            <th>Price</th>
            <th class="text-right">Qty</th>
          </tr>
        </thead>
        <tbody>

          

          {% include components.groups.checkout.personsOrderTr with {
            productName: 'Anew Ultimate Supreme Advanced Performance Cr√©me', 
            img: '/images/fpo/agnew-ultimate.png',
            autoReplenish: null,
            sku: '829-957',
            price: '30.00',
            classes: 'input-sm'
          }%}

          {% include components.groups.checkout.personsOrderTr with {
            productName: 'Anew Super Coverup', 
            img: '/images/fpo/cover-up.png',
            autoReplenish: true,
            sku: '329-321',
            price: '10.00',
            classes: 'input-sm'
          }%}

          {% include components.groups.checkout.personsOrderTr with {
            productName: 'Anew Purfume', 
            img: '/images/fpo/purfume.png',
            autoReplenish: null,
            sku: '856-376',
            price: '45.00',
            classes: 'input-sm'
          }%}


          
        </tbody>
      </table>
    </div>

    
  </div>
</li>