<li class="list-group-item my-4">

  <!-- START - CART SUMMARY -->
  <dl class="clearfix m-0">
    <dt class="pull-left">
      <a href="#collapse-{{ indexNum }}" data-toggle="collapse" {% if collapsed != false %} class="collapsed" {% endif %}>
        <span class="glyphicon glyphicon-play collapse-indicator"></span> 
        <b>{{ personName }}</b>
      </a>
    </dt>
    <dd class="pull-right"><b>${{ total }}</b></dd>
  </dl>

  <dl class="clearfix m-0">
    <dt class="pull-left">{{ itemCount }} items</dt>
    <dd class="pull-right">Discount: $45.55</dd>
  </dl> 
  <!-- END - CART SUMMARY -->

  <!-- START - CART DETAILS (EXPANDABLE) -->
  <div class="details collapse {% if collapsed == false %} in {% endif %}" id="collapse-{{ indexNum }}">

    <table class="table">
      <thead>
        <tr>
          <th class="d-none t-item hidden-xs hidden-sm">Item</th>
          <th class="d-none t-desc">Description</th>
          <th class="d-none t-price">Price</th>
          <th class="d-none t-qty text-right">Qty</th>
        </tr>
      </thead>
      <tbody>

        <!-- START - REPEATABLE ITEMS -->

        {% include '_includes/groups/your-order/single-product-tr.html.twig' with {
          productName: 'Anew Ultimate Supreme Advanced Performance Cr√©me', 
          img: '/images/fpo/agnew-ultimate.png',
          autoReplenish: null,
          sku: '829-957',
          price: '$30.00',
          classes: 'input-sm'
        }%}

        {% include '_includes/groups/your-order/single-product-tr.html.twig' with {
          productName: 'Anew Super Coverup', 
          img: '/images/fpo/cover-up.png',
          autoReplenish: true,
          sku: '329-321',
          price: '$10.00',
          classes: 'input-sm'
        }%}

        {% include '_includes/groups/your-order/single-product-tr.html.twig' with {
          productName: 'Anew Purfume', 
          img: '/images/fpo/purfume.png',
          autoReplenish: null,
          sku: '856-376',
          price: '$45.00',
          classes: 'input-sm'
        }%}

         <!-- END - REPEATABLE ITEMS -->

      </tbody>
    </table>

    <!-- START - VIEW OFFERS -->
    <div>

      <!-- EXPANDABLE TRIGGER -->
      <a href="#collapse-{{ indexNum }}-view-offer" data-toggle="collapse">
        <b>View offers</b>
        <span class="glyphicon glyphicon-play collapse-indicator"></span> 
      </a>

      <!-- START - VIEW OFFERS CONTENT (EXPANDABLE) -->
      <div class="details collapse" id="collapse-{{ indexNum }}-view-offer">
        XXX
      </div>
      <!-- END - VIEW OFFERS CONTENT (EXPANDABLE) -->

    </div>
    <!-- END - VIEW OFFERS -->

    



  </div>
  <!-- END - CART DETAILS (EXPANDABLE) -->

</li>