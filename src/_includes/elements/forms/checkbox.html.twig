{% if classes %}
  {% set classes = ' class="' ~ classes ~ '"' %}
{% endif %}
{% if id %}
  {% set id = ' id="' ~ id ~ '"' %}
{% endif %}
{% if name %}
  {% set name = ' name="' ~ name ~ '"' %}
{% endif %}
{% if theValue %}
  {% set theValue = ' value="' ~ theValue ~ '"' %}
{% endif %}
{% if checked %}
  {% set checked = ' checked' %}
{% endif %}

{{ thelabel ? theLabel : '' }}

<div class="checkbox">
  <label>
    <input type="checkbox" {{ classes }}{{ id }}{{ name }}{{ theValue }}{{ checked }}>
    <span class="mr-4"><i class="lt-icon lt-checkmark"></i><i class="indeterminate lt-icon lt-minus"></i></span>
    {{ theLabel }}
  </label>
</div>
