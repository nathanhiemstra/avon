  {% set name = ' name="' ~ name ~ '"' %}
{% endif %}
{% if id %}
  {% set id = ' id="' ~ id ~ '"' %}
{% endif %}
{% if theValue %}
  {% set theValue = ' value="' ~ theValue ~ '"' %}
{% endif %}
{% if checked %}
  {% set checked = ' checked ' %}
{% endif %}
{% if disabled %}
  {% set disabled = ' disabled ' %}
{% endif %}
{% if dataAttrs %}
  {% set dataAttrs = ' ' ~ dataAttrs ~ ' ' %}
{% endif %}

{{ thelabel ? theLabel : '' }}

