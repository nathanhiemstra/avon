{% if type is empty %}
  {% set type = 'text' %}
{% endif %}
{% if classes %}
  {% set classes = ' ' ~ classes %}
{% endif %}
{% if size %}
  {% set size = ' size="' ~ size ~ '"' %}
{% endif %}
{% if maxlength %}
  {% set maxlength = ' maxlength="' ~ maxlength ~ '"' %}
{% endif %}
{% if id %}
  {% set id = ' id="' ~ id ~ '"' %}
{% endif %}
{% if placeholder %}
  {% set placeholder = ' placeholder="' ~ placeholder ~ '"' %}
{% endif %}
{% if includeValueData %}
  {% set data = ' data-initial-value="' ~ theValue ~ '"' %}
{% endif %}
{% if theValue %}
  {% set theValue = ' value="' ~ theValue ~ '"' %}
{% endif %}
{% if hasInlineErrorIcon %}
  {% set errorClass = 'has-error--icon-inline' %}
{% endif %}
{% if hasAbsoluteErrorIcon %}
  {% set errorClass = 'has-error--icon-inline-absolute' %}
{% endif %}
{% if (hasInlineErrorIcon) or (hasAbsoluteErrorIcon) %}
  {% set errorIcon %}{% include "_includes/elements/forms/label-error-icon.html.twig" %}{% endset %}
  {% set hasInlineErrorIconStart = '<span class="' ~ errorClass ~ '">' %}
  {% set hasInlineErrorIconEnd = '</span">' %}
{% endif %}
{% if readonly %}
  {% set attrs = attrs ~ ' readonly' %}
  {% set listeners = listeners ~ ' onclick="this.select()"' %}
{% endif %}
{{ hasInlineErrorIconStart }}
{{ errorIcon }}<input type="{{ type }}" class="form-control{{ classes }}"{{ id }}{{ placeholder }}{{ theValue }}{{ size }}{{ maxlength }}{{ data }}{{ attrs }}{{ listeners }}>
{{ hasInlineErrorIconEnd }}
