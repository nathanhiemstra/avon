{% extends "_layouts/modal.html.twig" %}
{% set modalId = 'checkout-edit-stored-card-modal' %}

{# ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ #}
{# DEFINE BLOCK - modalHeader #}
{# ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ #}
{% block modalHeader %}

  <button type="button" class="close link-muted" data-dismiss="modal" aria-hidden="true">
    <span class="sr-only">Close modal</span>
    <span class="lt-icon lt-close lt-large py-1"></span>
  </button>
  <h6 class="modal-title">Edit Card Info</h6>

{% endblock %}


{# ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ #}
{# DEFINE BLOCK - modalBody #}
{# ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ #}
{% block modalBody %}

 

  <p><span class="mr-3"><img src="images/icons/payment-visa.svg" alt="VISA"></span>VISA ending in 9876</p>  
  
  <form role="form">
    <div class="form-group">
      <label class="control-label">Name on Card</label>
      {% include components.elements.forms.input with {
        theValue: 'Marcia Brady'
      } %}
    </div>

    <div class="form-group">
      <label class="control-label">Expiration date</label>
      <div class="row">
        <div class="col col-sm-6">
          <div class="form-group has-feedback">
            <select class="form-control" name="" id="">
              <option value="">01 - Jan</option>
              <option value="">02 - Feb</option>
              <option value="">03 - Mar</option>
              <option value="">04 - Apr</option>
            </select>
            <span class="lt-icon lt-triangle-down form-control-feedback"></span>
          </div>
        </div>
        <div class="col col-sm-6">
           <div class="form-group has-feedback">
              <select class="form-control" name="" id="">
                <option value="2019">2019</option>
                <option value="2020">2019</option>
                <option value="2021">2019</option>
              </select>
              <span class="lt-icon lt-triangle-down form-control-feedback"></span>
            </div>
        </div>
      </div>
    </div>

    <h6>Billing Address</h6>


    <div class="form-group">
      <label class="control-label">Address</label>
      {% include components.elements.forms.input with {
        theValue: '1234 Main Street',
        classes: 'mb-3'
      } %}
      {% include components.elements.forms.input with {
        theValue: 'Unit 1'
      } %}
    </div>

    <div class="row">
      <div class="col col-xs-3">
        <div class="form-group">
          <label class="control-label">ZIP</label>
          {% include components.elements.forms.input with {
            theValue: '12345'
          } %}
        </div>
      </div>
      <div class="col col-xs-9">
        <div class="form-group">
          <label class="control-label">City</label>
          {% include components.elements.forms.input with {
            theValue: 'Albequerque'
          } %}
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col col-xs-3">
        <div class="form-group">
          <label class="control-label">State</label>
          <div class="form-group has-feedback">
            <select class="form-control" name="" id="">
              <option value="2019">AK</option>
              <option value="2020">NJ</option>
              <option value="2021">TX</option>
            </select>
            <span class="lt-icon lt-triangle-down form-control-feedback"></span>
          </div>
        </div>
      </div>
      <div class="col col-xs-9">
        <div class="form-group">
          <label class="control-label">Contry</label>
          <div class="form-group has-feedback">
            <select class="form-control" name="" id="">
              <option value="2019">Select a country</option>
              <option value="2020">USA</option>
              <option value="2021">India</option>
            </select>
            <span class="lt-icon lt-triangle-down form-control-feedback"></span>
          </div>
        </div>
      </div>
    </div>

  </form>

{% endblock %}

{# ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ #}
{# DEFINE BLOCK - modalFooter #}
{# ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ #}
{% block modalFooter %}

  <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
  <button type="button" class="btn btn-primary" data-dismiss="modal">Update</button>

{% endblock %}
