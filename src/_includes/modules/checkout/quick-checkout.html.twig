  <!-- START - CREDIT CARD PAYMENT METHOD -->
  <section class="list-group border">

    <!-- header -->
    <div class="list-group-item border-0">
      <div class="clearfix mb-4">
        <h6 class="pull-left m-0 mt-2">Pay with credit card</h6>
        <a class="pull-right underline" href="#">Cancel</a>
      </div>

      <div class="form-group has-feedback">
        <label class="control-label">Card Type</label>
        <select class="form-control">
          <option>VISA</option>
          <option>MasterCard</option>
          <option>Other</option>
        </select>
        <span class="lt-icon lt-triangle-down form-control-feedback"></span>
      </div>

      <div class="form-group has-feedback">
        <label class="control-label">Card Number</label>
        {% include components.elements.forms.input with {placeholder: ''} %}
      </div>

      <div class="list-group-item border-0 p-1 mb-4">
        <label class="control-label">Name on Card</label>
        <div class="row">
          <div class="col-xs-6">
                {% include components.elements.forms.input with {placeholder: 'First Name'} %}
          </div>
          <div class="col-xs-6">
                {% include components.elements.forms.input with {placeholder: 'Last Name'} %}
          </div>
        </div>
      </div>

      <div class="list-group-item border-0 p-0 mb-3">
        <div class="row">
          <div class="col-xs-9">
            <label class="control-label">Expiration Date</label>
            <div class="row">
              <div class="col-xs-6">
                <select class="form-control form-inline">
                  <option>January</option>
                  <option>February</option>
                  <option>March</option>
                </select>
                <span class="lt-icon lt-triangle-down form-control-feedback mr-4"></span>
              </div>
              <div class="col-xs-6">
                <select class="form-control form-inline">
                  <option>2018</option>
                  <option>2019</option>
                  <option>2020</option>
                </select>
                <span class="lt-icon lt-triangle-down form-control-feedback mr-4"></span>
              </div>
            </div>
          </div>
          <div class="col-xs-3">
            <label class="control-label">CVV <span class="lt-icon lt-info lt-medium ml-2 align-middle"></span></label>
            {% include components.elements.forms.input with {placeholder: ''} %}
          </div>
        </div>
      </div>

      <div class="from-group">
        <div class="clearfix">
          {% include components.elements.forms.checkbox with {id: 'checkbox1', name: 'checkbox1', classes: '', theValue: 'option1', theLabel: 'Billing Address is same as Shipping', checked: true} %}
        </div>
      </div>

      <!--BILLING ADDRESS FORM FIELDS-->
      <div class="billing-address">
        <h6>Billing Address</h6>

        <div class="form-group">
          <label class="control-label">Address</label>
          {% include components.elements.forms.input with {placeholder: ''} %}
        </div>

        <div class="form-group">
          <label class="control-label">Apartment, Suite, etc</label>
          {% include components.elements.forms.input with {placeholder: ''} %}
        </div>

        <div class="list-group-item border-0 p-1 mb-4">
          <div class="row">
            <div class="col-xs-6">
                <label class="control-label">ZIP</label>
                {% include components.elements.forms.input with {placeholder: ' '} %}
            </div>
            <div class="col-xs-6">
                <label class="control-label">City</label>
                {% include components.elements.forms.input with {placeholder: ' '} %}
            </div>
          </div>
        </div>

        <div class="form-group">
          <label class="control-label">Apartment, Suite, etc</label>
          {% include components.elements.forms.input with {placeholder: ''} %}
        </div>

        <div class="form-group has-feedback">
          <label class="control-label">State</label>
          <select class="form-control">
            <option>Select..</option>
            <option>State 1</option>
            <option>State 2</option>
          </select>
          <span class="lt-icon lt-triangle-down form-control-feedback"></span>
        </div>
      </div>

      <!--Continue Button-->
      <a class="btn btn-primary btn-lg">Continue</a>

    </div>

  </section>
