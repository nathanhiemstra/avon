<section class="list-group box-emphasize box-emphasize--focused">
  <div class="list-group-item border-0">
    <div class="clearfix mb-4">
      <h6 class="pull-left m-0 mt-2"><img class="mr-2" src="/images/icons/payment-avoncredit.svg" alt="">Pay With Avon Credit</h6>
      <a class="pull-right underline" href="#">Cancel</a>
    </div>
    <p class="clearfix my-2 mb-4 text-muted">$85.00 available</p>
    <div class="form-group form-inline">
       <label class="control-label d-block mb-2">Amount to pay</label>
       {% include components.elements.forms.input with {
        classes: 'form-control-inline',
        type: 'number',
        placeholder: '$0.00',
        maxlength: '',
        size: '12'
      } %}
    </div>
     <!--Continue Button-->
    <a class="btn btn-primary">Continue</a>
  </div>
</section>
