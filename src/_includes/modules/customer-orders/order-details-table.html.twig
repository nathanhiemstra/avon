<div class="mt-3 mb-5 pl-5">
  <table class="table table-responsive table-striped table-compact m-0">
    <thead>
      <tr>
        {% if hasSoldOutItems %}<th style="width: 15px;" class="pr-0"></th>{% endif %}
        <th>Order ID</th>
        <th>Date</th>
        <th>Campaign</th>
        <th>Quantity</th>
      </tr>
    </thead>
    <tbody>

      {% for item in items %}
        <tr>
          {% if hasSoldOutItems %}
            {% if item.soldOut %}
              <td style="width: 15px;" class="pr-0"><span class="lt-icon lt-warning-fill lt-medium text-danger align-middle"></span></td>
            {% else %}
              <td style="width: 15px;" class="pr-0"></td>
            {% endif %}
          {% endif %}
          <td><a href="#" class="link-plain underline">{{ item.orderId }}</a></td>
          <td>{{ item.date }}</td>
          <td>{{ item.campaign }}</td>
          <td>{{ item.quantity }}</td>
        </tr>
      {% endfor %}

    </tbody>
  </table>
</div>
