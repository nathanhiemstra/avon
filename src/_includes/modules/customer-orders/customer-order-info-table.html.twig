<div class="panel-group">

  <!-- Item -->
  <div class="panel panel-light">

    <div id="collapseOne" class="panel-collapse collapse in">
      <div class="panel-body p-0">
        <div class="my-0 my-md-3 table-responsive">

          <table class="table table-striped table-responsive table-bordered-outside-only m-0">
            <thead>
              <tr>
                <th>Campaign</th>
                <th>Quantity</th>
                <th>Product Number</th>
                <th>Description</th>
                {% if hasRemarks %}<th>Remarks</th>{% endif %}
              </tr>
            </thead>
            <tbody>
              {% for item in items %}
                <tr>
                  <td>{{ item.campaign }}</td>
                  <td>{{ item.quantity }}</td>
                  <td>{{ item.prodNum }}</td>
                  <td>{{ item.desc }}</td>
                  {% if hasRemarks %}<td>{{ item.remark }}</td>{% endif %}
                </tr>
              {% endfor %}
            </tbody>
          </table>

        </div>
      </div>
    </div>
  </div>

</div>
