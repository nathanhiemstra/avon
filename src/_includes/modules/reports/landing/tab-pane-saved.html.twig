    <div>
      <div class="large">Customer Report Name </div>
      <div class="text-muted mt-2">{{ fpo.sentence }}</div>
    </div>
    <div>
       <a href="#" class="link-muted">
        <span class="lt-icon lt-close lt-medium text-muted align-middle mr-2"></span>
        <span class="xs-hidden">Delete</span>
      </a>
    </div>
  </li>
{% endset %}

{% set item_large %}
