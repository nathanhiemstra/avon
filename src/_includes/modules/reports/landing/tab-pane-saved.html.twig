    <div>
      <div class="large">Customer Report Name {{ fpo.sentence }}</div>
      <div class="text-muted mt-2">{{ fpo.paragraph }}</div>
    </div>
    <div class="ml-5">
       <a href="#" class="link-muted nowrap">
        <span class="lt-icon lt-close lt-medium text-muted align-middle mr-2"></span>
        <span class="xs-hidden">Delete</span>
      </a>
    </div>
  </li>
{% endset %}

