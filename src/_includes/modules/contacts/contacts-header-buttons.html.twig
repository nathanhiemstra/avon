<ul class="list-inline list-inline--dividers mb-0 actions-secondary--list">
  <!-- FILTER -->
  <li class="list-second-to-last">
    <!-- START - MODAL LINK FOR {{ contactTypeLabel }} -->
    <a href="javascript:void(0)" class="link-item link-muted" data-toggle="modal" data-target="#modal-contact-list-filter-{{ contactType }}">
      <!-- DEVELOPER NOTE: After applying a filter in the Filter Modal, the filter icon should turn solid grey. To do this, change the class from "lt-filter" to "lt-filter-fill" -->
      <span class="lt-icon lt-filter lt-medium align-middle"></span>
      <span class="lt-icon lt-filter-fill lt-medium align-middle"></span>
      <!-- DEVELOPER NOTE: ".filter-count" shows how many items are chosen in the filters modal -->
      <span class="link-underline">Filter <span class="filter-count">[4]</span></span>
    </a>
    <!-- END - MODAL LINK FOR {{ contactTypeLabel }} -->
  </li>
  <!-- SORT -->
  <li class="visible-xs-inline-block visible-sm-inline-block">
    <div class="btn-group d-block">
      <a href="javascript:void(0)" data-toggle="dropdown" class="link-item link-muted">
        <span class="lt-icon lt-carat-down lt-medium align-middle icon-sort"></span><span class="link-underline">Sort</span>
      </a>
      <ul class="dropdown-menu dropdown-menu--alt-active pull-right">
        <!-- DEV NOTE :: add class `active` to the currently activated sort method -->
        <li class="active"><a href="#">Column title [A-Z]</a></li>
        <li><a href="#">Column title [Z-A]</a></li>
        <li><a href="#">Column title [Yes-No]</a></li>
        <li><a href="#">Column title [No-Yes]</a></li>
      </ul>
    </div>
  </li>
</ul>




