<form role="form">
  <div class="form-group">
    {% include '_includes/elements/forms/radio.html.twig' with {id: 'salesTaxDefault', classes: 'sales-tax-radio', name: 'salesTax', theValue: '0.00% (default)', theLabel: '0.00% (default)', checked: true} %}
    {% include '_includes/elements/forms/radio.html.twig' with {id: 'salesTaxCustom', classes: 'sales-tax-radio', name: 'salesTax', theValue: 'Custom sales tax for this customer', theLabel: 'Custom sales tax for this customer', checked: false} %}
  </div>
  <div class="form-group has-feedback row">
    <div class="cd-sales-tax col-xs-12 pr-0">
      {% include '_includes/elements/forms/input.html.twig' with {id: 'salesTaxCustomPercent', type: 'number', value: '0.00', disabled: true} %}
      <span class="form-control-feedback">%</span>
    </div>
  </div>
  <p class="cd-sales-tax-message small">Sales tax must be in 3 decimal place format (ex. 7.50%)</p>
  {% include '_includes/modules/contacts/contact-detail/tab-panes/details/edit-btns.html.twig' %}
</form>
