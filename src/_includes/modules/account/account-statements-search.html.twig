<!-- START - ACCOUNT STATEMENT SEARCH -->
  <div class="row">

    <h3 class="text-muted mb-4">My Statements</h3>
    <p class="text-muted">Click "Search" below to see your most recent transactions.<br/>
    You can also choose a custom date range.</p>
    <div class="row">
        <!-- start date -->
        <div class="form-group col-xs-6 col-sm-3 d-inline-block has-feedback">
          <label class="text-muted normal">Start Date</label>
          <input type="text" class="form-control" placeholder="11/17/2017">
          <span class="lt-icon lt-calendar form-control-feedback"></span>
        </div>

        <!-- end date -->
        <div class="form-group col-xs-6 col-sm-3 d-inline-block has-feedback">
          <label class="text-muted normal">End Date</label>
          <input type="text" class="form-control" placeholder="02/15/2018">
          <span class="lt-icon lt-calendar form-control-feedback"></span>
        </div>

        <!-- transaction type -->
        <div class="form-group col-xs-6 col-sm-3 d-inline-block">
          <label class="text-muted normal">Transaction Type</label>
            <div class="clearfix">
            {% include components.elements.forms.select with {
                items: [
                  {
                    'label': 'All Transactions'
                  }, {
                    'label': 'Transaction Type I'
                  }, {
                    'label': 'Transaction Type II'
                  }
                ]
              } %}
          </div>
        </div>

        <!-- search button -->
        <div class="form-group col-xs-6 col-sm-3 d-inline-block mt-4">
              <a class="btn btn-primary btn-lg">Search</a>
          </div>
        </div>
  </div>

<!-- END - ACCOUNT STATEMENT SEARCH -->
