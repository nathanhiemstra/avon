<section>
  <!-- ENROLLMENT STATUS-->
  {% set rowContent  %}
    <!-- Developer note: Use class "d-none" to hide or show enrolled status -->
    <!-- START - SHOW WHEN NOT ENROLLED -->
    <span class="enroll-item--not-enrolled">
      Not enrolled <button class="btn btn-sm btn-default btn-soft ml-2 enroll-item--start-enrollment-trigger">Enroll Now</button>
    </span>
    <!-- END - SHOW WHEN NOT ENROLLED -->

    <!-- START - SHOW WHEN ENROLLED -->
