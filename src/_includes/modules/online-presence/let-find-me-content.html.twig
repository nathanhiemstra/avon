  {% endset %}

  {% include '_includes/groups/lists/label-content/row.html.twig' with {
    rowLabel: '<h6 class="m-sm-0 d-inline-block">Enrollment Status</h6>
    <span class="lt-icon lt-tip lt-medium align-middle" data-toggle="tooltip" data-placement="top" title="Some helpful information that a user might want to know."></span>',
    rowContent: rowContent
  }%}
</section>

