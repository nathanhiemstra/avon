{% extends "_layouts/modal.html.twig" %}
{% if not modalId %}
  {% set  modalId = 'select-widget-modal' %}
{% endif %}

{# ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ #}
{# DEFINE BLOCK - modalHeader #}
{# ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ #}
{% block modalHeader %}

  <button type="button" class="close link-muted" data-dismiss="modal" aria-hidden="true">
    <span class="sr-only">Close modal</span>
    <span class="lt-icon lt-close lt-large py-1"></span>
  </button>
  <h4 class="modal-title text-center">Select New Widget</h4>


{% endblock %}

{# ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ #}
{# DEFINE BLOCK - modalBody #}
{# ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ #}
{% block modalBody %}

  {% include "_includes/groups/boxes/primary/carousel-container.html.twig" with { 
  carouselId: 'carousel-' ~ modalId, 
  hasToolbar: null,
  items: {
    item1: {
      widgetPath: '_includes/modules/widgets/widget-kickstart.html.twig'
    },
    item2: {
      fpoImgSrc: 'src="images/fpo/home/2.png"'
    },
    item3: {
      fpoImgSrc: 'src="images/fpo/home/3.png"'
    },
    item4: {
      fpoImgSrc: 'src="images/fpo/home/4.png"'
    },
    item5: {
      fpoImgSrc: 'src="images/fpo/home/5.png"'
    },
    item6: {
      fpoImgSrc: 'src="images/fpo/home/6.png"'
    },
    item7: {
      fpoImgSrc: 'src="images/fpo/home/7.png"'
    },
    item8: {
      fpoImgSrc: 'src="images/fpo/home/8.png"'
    },
    item9: {
      fpoImgSrc: 'src="images/fpo/home/9.png"'
    },
    item10: {
      fpoImgSrc: 'src="images/fpo/home/10.png"'
    },
    item11: {
      fpoImgSrc: 'src="images/fpo/home/11.png"'
    },
    item12: {
      fpoImgSrc: 'src="images/fpo/home/12.png"'
    }
  }
} %}


{% endblock %}

{# ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ #}
{# DEFINE BLOCK - modalFooter #}
{# ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ #}
{% block modalFooter %}

  <div class="row">
    <div class="col-xs-12 col-sm-6 my-2">
      <button type="button" class="btn btn-default btn-block" data-dismiss="modal" aria-hidden="true">Cancel</button>
    </div>
    <div class="col-xs-12 col-sm-6 my-2">
      <button id="select-widget-trigger" type="button" class="btn btn-primary btn-block" data-dismiss="modal">Select Widget</button>
    </div>
  </div><!-- /.row -->



{% endblock %}
