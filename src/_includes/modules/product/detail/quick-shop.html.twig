{% extends "_layouts/modal-lg-no-footer.html.twig" %}
{% set modalId = 'quick-shop-modal' %}

{# ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ #}
{# DEFINE BLOCK - modalHeader #}
{# ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ #}
{% block modalHeader %}

  <!-- DEV NOTE :: this button only displays if .nested class is present on modal -->
  <button type="button" class="close back link-primary pull-left" data-toggle="modal" data-target="#product-list-modal" data-direction="back" aria-hidden="true">
    <span class="sr-only">Go back</span>
    <span class="lt-icon lt-left lt-large py-1"></span>
  </button>

  <button type="button" class="close link-muted" data-dismiss="modal" aria-hidden="true">
    <span class="sr-only">Close modal</span>
    <span class="lt-icon lt-close lt-large py-1"></span>
  </button>

  <h4 class="modal-title">Quick Shop</h4>

{% endblock %}


{# ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ #}
{# DEFINE BLOCK - modalHeaderMessage #}
{# ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ #}
{% block modalHeaderMessage %}
{#
  <!-- START - GLOBAL ALERT MESSAGE -->
   {% include "_includes/modules/global/alert-page-level.html.twig" with {
      'alertId': '',
      'alertClasses': 'alert-success',
      'alertIcon': 'lt-checkmark',
      'alertMsg': 'Item has been added',
      'alertBtnText': 'View your Order',
    }
  %}
  <!-- END - GLOBAL ALERT MESSAGE -->
 #}
{% endblock %}


{# ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ #}
{# DEFINE BLOCK - modalBody #}
{# ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ #}
{% block modalBody %}

  <!-- DEVELOPER NOTE :: this markup, starting with the .row below is shared
    between Product Detail Page and Quick Shop Modal -->
  <div class="row">

    <!-- START - PRODUCT IMAGES -->
    <div class="pdp-images-block col-sm-6 pr-md-4 pr-lg-5">
      {% include "_includes/modules/product/detail/images.html.twig" %}
    </div>
    <!-- END - PRODUCT IMAGES -->

    <!-- START - PRODUCT DETAILS -->
    <div class="pdp-details-block col-sm-6 pt-4 pt-md-0 pl-md-4 pl-lg-5 d-flex">
      {% include "_includes/modules/product/detail/details.html.twig" %}
    </div>
    <!-- END - PRODUCT DETAILS -->

  </div>
  <!-- /.row -->

{% endblock %}
