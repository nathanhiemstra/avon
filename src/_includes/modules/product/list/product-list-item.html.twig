<li class="avon-product-list__item container-fluid border-bottom p-4">
  <a href="{{ itemUrl }}">
    <div class="row">
      <div class="col col-xs-3 col-md-2">
        <img src="{{ imgUrl }}" class="product-img img-responsive">
      </div>
      <div class="col col-xs-9 col-md-8">
        <p class="title">{{ itemTitle }}</p>
        <p>
          <span class="sale-price">{{ itemPrice }}</span>
          <span class="reg-price small">Regular Price: {{ regPrice }}</span>
        </p>
        <p>
          <span class="rating small">
            {% include components.elements.ratings.selected %}
            {% include components.elements.ratings.selected %}
            {% include components.elements.ratings.selected %}
            {% include components.elements.ratings.selected %}
            {% include components.elements.ratings.unselected %}
            <span class="num-ratings">{{ numRatings }}</span>
          </span>
          <span class="stock small"><span class="lt-icon lt-checkmark" aria-hidden="true"></span> {{ stockStatus }}</span>
        </p>
      </div>
      <div class="col col-xs-0 col-md-2">
        <!-- <button type="button" class="btn btn-default btn-sm pull-right hidden-xs hidden-sm">Add to Order</button> -->
        <button type="button" class="btn btn-primary btn-lg pull-right hidden-xs" data-toggle="modal" data-target="#product-add-to-order">
          Add to order
        </button>
      </div>
    </div>
  </a>
</li>
