<li class="avon-product-list__item container-fluid border-bottom p-4">
  <a href="{{ itemUrl }}">
    <div class="row">
      <div class="col col-xs-3 col-sm-2">
        <img src="{{ imgUrl }}" class="product-img img-responsive">
      </div>
      <div class="col col-xs-9 col-sm-10">
        <div class="col col-xs-12 col-sm-8">
          <p class="title link-plain">{{ itemTitle }}</p>
          <p>
            <span class="sale-price">{{ itemPrice }}</span>
            <span class="reg-price small link-plain">Regular Price: <span class="strike-through">{{ regPrice }}</span></span>
          </p>
          {# <p>
            <span class="rating small">
              {% include components.elements.ratings.selected %}
              {% include components.elements.ratings.selected %}
              {% include components.elements.ratings.selected %}
              {% include components.elements.ratings.selected %}
              {% include components.elements.ratings.unselected %}
              <span class="num-ratings">{{ numRatings }}</span>
            </span>
            <span class="stock small"><span class="lt-icon lt-checkmark" aria-hidden="true"></span> {{ stockStatus }}</span>
          </p> #}
        </div>
        <div class="col col-xs-12 col-sm-4">
          <p>
            <button type="button" class="btn btn-primary btn-sm btn-block-sm pull-right-sm" data-toggle="modal" data-target="#product-add-to-order">
              Add to order
            </button>
          </p>
        </div>
      </div>
    </div>
  </a>
</li>
