{% if page == 'product-detail' %}
  {% set itemsTotal = '9' %}
  {% set priceTotal = '54.00' %}
  {% set ctaButton = 'Continue' %}

{% elseif page == 'checkout' %}
  {% set itemsTotal = '55' %}
  {% set priceTotal = '484.87' %}
  {% set ctaButton = 'Place Order' %}

{% else %}
  {% set ctaButton = 'Continue' %}
{% endif %}

<!-- DRAWER -->
<div id="drawer-order-summary" class="drawer drawer-fixed-bottom drawer-order-summary hidden-md hidden-lg">

  <!-- DRAWER NAV BAR -->
  <section class="navbar navbar-default hidden-md hidden-lg">
    <div class="container pt-4">

      <!-- DRAWER SUMMARY -->
      <div class="pull-left">
        <h4 class="m-0"><a href="#drawer-order-summary" data-toggle="drawer"><span class="glyphicon glyphicon-shopping-cart"></span> My order <small> (<span class="order-qty">8</span> items)</small></a></h4>

      </div>
      <div class="pull-right">
        <a href="#drawer-order-summary" data-toggle="drawer"><span class="glyphicon glyphicon-chevron-up"></span></a>

        
      </div>
    </div>
  </section>

  <!-- DRAWER CONTENT -->
  <section>

    <!-- Nav tabs -->
    <ul class="nav nav-tabs">
      <li class="active ml-4"><a href="#pd-products" data-toggle="tab">Products (8)</a></li>
      <li><a href="#pd-incentives" data-toggle="tab">Incentives (5)</a></li>
    </ul>
    <div class="container">
      <!-- Tab panes -->
      <div class="tab-content mt-5">
        <div class="tab-pane active" id="pd-products">
          {% include components.modules.checkoutV2.orderSummaryTabProducts %}
        </div>

        <!-- INCENTIVES -->
        <div class="tab-pane" id="pd-incentives">
          {% include components.modules.checkoutV2.orderSummaryTabIncentives %}
      </div>
    
    </div>



  </section>
</div><!-- /.drawer -->