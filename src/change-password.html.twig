{% extends layouts.base %}

{# ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ #}
{# DEFINE BLOCK - CONTENT #}
{# ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ #}
{% block content %}

  {# ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ #}
  {# DEFINE BLOCK - MAIN #}
  {# ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ #}
  {% block main %}

  <section class="container container--page">
    {% embed layouts.columns3x9 %}

      {# ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ #}
      {# DEFINE BLOCK - ASIDE #}
      {# ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ #}
      {% block aside %}

        <h5>My Account</h5>
        <ul class="nav nav-pills nav-stacked">
          <li><a href="#">Profile</a></li>
          <li class="active"><a href="#">Password</a></li>
          <li><a href="#">Account Balance</a></li>
          <li><a href="#">Pay Avon</a></li>
          <li><a href="#">Get Paid by Avon</a></li>
        </ul>

      {% endblock %}

      {# ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ #}
      {# DEFINE BLOCK - MAIN #}
      {# ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ #}
      {% block main %}

        <h2 class="mb-5">Password</h2>

        <div class="border-top pt-5 mb-5">
          <div class="form-group">
            <label class="control-label text-uppercase" >Current Password</label>
            <p>*******</p>
          </div>

          <div class="form-group">
            <label class="control-label text-uppercase" >Password Hint</label>
            <p>"Remember that thing that happened when I was at that place?"</p>
          </div>

          <button type="submit" class="btn btn-default">Edit</button>
        </div>

        <div class="border-top pt-5">
          <div class="form-group">
            <label class="control-label text-uppercase" >Current Password</label>
            <input type="password" class="form-control" id="current-password" placeholder="Password">
          </div>

          <div class="form-group">
            <label class="control-label text-uppercase" >New Password</label>
            <input type="password" class="form-control" id="new-password" placeholder="Password">
          </div>

          <div class="form-group">
            <label class="control-label text-uppercase" >Confirm New password</label>
            <input type="password" class="form-control" id="confirm-password" placeholder="Password">
          </div>

          <div class="form-group">
            <label class="control-label text-uppercase" >Password Hint</label>
            <textarea class="form-control" rows="3"></textarea>
          </div>

          <button type="submit" class="btn btn-default">Cancel</button>
          <button type="button" class="btn btn-primary">Save</button>
        </div>

      {% endblock %}

    {% endembed %}
  </section>

  {% endblock %}


{% endblock %}
