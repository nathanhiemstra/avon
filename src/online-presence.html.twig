{% extends layouts.base %}

{% set sectionClass = 'page--profile' %}

{# ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ #}
{# DEFINE BLOCK - CONTENT #}
{# ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ #}
{% block content %}

  {# ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ #}
  {# DEFINE BLOCK - MAIN #}
  {# ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ #}
  {% block main %}

    {% include "_includes/groups/fpo/magnolia-managed-content-block.html.twig" with {
      position: 'top',
      html: '<div class="reverse-bg py-3">
      <p class="m-0 text-center text-muted">Mangolia Managed Content Block</p>
      </div>'
    } %}

    <section class="container container--page">

      {% embed '_layouts/columns-3x9-secondary-nav.html.twig' %}

        {# ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ #}
        {# DEFINE BLOCK - ASIDE #}
        {# ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ #}
        {% block aside %}

          {% include '_includes/groups/navigation/my-account-nav.html.twig' with { active : 'online-presence' } %}

        {% endblock %}

        {# ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ #}
        {# DEFINE BLOCK - MAIN #}
        {# ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ #}
        {% block main %}

          <h2>Online Presence</h2>
          <p>{{fpo.paragraph}}</p>

          <hr>


          <!-- START - ONLINE STORE ADDRESS -->
          <h5 class="my-5">Online Store</h5>
          {% set itemName = 'online-store' %}
          {% set thisContent %}
            {% include '_includes/modules/online-presence/' ~ itemName ~ '-content.html.twig' %}
          {% endset %}
          {% set thisFormContent %}
            {% include '_includes/modules/online-presence/' ~ itemName ~ '-form.html.twig' %}
          {% endset %}

          {% include '_includes/groups/user-editable/item.html.twig' with {
            label: 'Online Store Address',
            itemClass: 'item--' ~ itemName ,
            canEdit: true,
            content: thisContent,
            formContent: thisFormContent
          } %}
          <!-- END - ONLINE STORE ADDRESS -->

          <hr>

          <!-- START - LET CUSTOEMRS AND REPS FIND ME -->
          <h5 class="my-5">Let Customers And Reprsentatives Find Me</h5>
          {% set itemName = 'let-find-me' %}
          {% set thisContent %}
            {% include '_includes/modules/online-presence/' ~ itemName ~ '-content.html.twig' %}
          {% endset %}
          {% set thisFormContent %}
            {% include '_includes/modules/online-presence/' ~ itemName ~ '-form.html.twig' %}
          {% endset %}

          {% include '_includes/groups/user-editable/item.html.twig' with {
            label: 'Let Customers And Reprsentatives Find Me',
            itemClass: 'item--' ~ itemName ,
            canEdit: true,
            content: thisContent,
            formContent: thisFormContent
          } %}
          <!-- END - LET CUSTOEMRS AND REPS FIND ME -->




          <!-- START - NAME AND ADDRESS-->
          <section class="">


{#
            <hr>

            <h5 class="my-5">Let customers and representatives find me</h5>
            <p>{{fpo.paragraph}}</p>

            <div class="row my-5">

              <div class="col-sm-4 my-md-2">

                <h6 class="mt-md-2 mb-0 d-inline-xs mr-2">Enrollement Status</h6>

                <a href="#" class="small underline">Learn more</a>

              </div>

              <div class="col-sm-8 has-error text-danger"><span class="lt-icon lt-large lt-close"></span>Not enrolled</div>
            </div>

            <button class="btn btn-sm btn-primary">Enroll Now</button> #}

          </section>
          <!-- END - NAME AND ADDRESS-->

        {% endblock %}

      {% endembed %}

    </section>

    {% include "_includes/groups/fpo/magnolia-managed-content-block.html.twig" with {
      position: 'bottom',
      html: '<div class="reverse-bg py-3">
      <p class="m-0 text-center text-muted">Mangolia Managed Content Block</p>
      </div>'
    } %}

  {% endblock %}

{% endblock %}
