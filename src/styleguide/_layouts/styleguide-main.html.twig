{# styleguide-main.html.twig #}
{% extends 'styleguide/_layouts/base.html.twig' %}


{# ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ #}
{# DEFINE BLOCK - CONTENT #}
{# ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ #}
{% block content %}
 

    <!-- Docs master nav -->
    {% include "styleguide/_includes/navs/nav-main.html.twig" %}


    <!-- Docs page layout -->
    <div class="bs-header" id="content">
      <div class="container">
        <h1>{{ title }}</h1>
      </div>
    </div>

    <div class="container bs-docs-container">
      <div class="row">
        <div class="col-md-9" role="main">


          {# ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ #}
          {# RENDER BLOCK - CONTENT #}
          {% block styleguideContent %}{% endblock %}
          {# ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ #}


        </div>
        <div class="col-md-3">
          <div class="bs-sidebar hidden-print" role="complementary">
            <ul class="nav bs-sidenav">

              {# ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ #}
              {# BLOCK - SIDE BAR #}
              {# ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ #}

              {% if slug == "styleguide-home" %}
                {% include "../_includes/navs/nav-home.html.twig" %}

              {% elseif slug == "styleguide-css" %}
                {% include "../_includes/navs/nav-css.html.twig" %}

              {% elseif slug == "styleguide-elements" %}
                {% include "../_includes/navs/nav-elements.html.twig" %}

              {% elseif slug == "styleguide-groups" %}
                {% include "../_includes/navs/nav-groups.html.twig" %}

              {% elseif slug == "styleguide-modules" %}
                {% include "../_includes/navs/nav-modules.html.twig" %}

              {% elseif slug == "styleguide-javascript" %}
                {% include "../_includes/navs/nav-javascript.html.twig" %}
              {% endif %}
    
            </ul>
          </div>
        </div>
      </div>
    </div>


{% endblock %}
