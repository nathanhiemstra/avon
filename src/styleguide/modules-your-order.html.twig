{# styleguide/index.html.twig #}
{% set title = "Styleguide Modules" %}
{% set slug = "styleguide-modules-your-order" %}
{% extends "styleguide/_layouts/styleguide-main.html.twig" %}


{# ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ #}
{# DEFINE BLOCK - STYLEGUIDE CONTENT #}
{# ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ #}
{% block styleguideContent %}


<h1 id="your-order" class="bs-headline">Your Order</h1>


  {# ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ #}
  {# BASE #}
  {# ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ #}
  {% set styleguideItem = {
    title:        "Page Structure",
    slug:         "your-order-structure",
    description:  'Layouts used: 
    <ul>
      <li><a href=layouts.html#columns-12>12 columns (full width)</a></li>
      <li><a href=layouts.html#columns-9>9 columns</a></li>
      <li><a href=layouts.html#super-panel">9x3 columns</a></li>
    </ul>',
    snippet:      '
    <body>
      <section id="avon-poc">

        <!-- Header -->
        <section class="container">
          <div class="row">
            <div class="col-xs-12">
              <header>Drawer header</header>
            </main>
          </div>
        </section>



        <!-- Tab Nav - Layout: 9 columns wide -->
        <section class="container">
          <div class="row">
            <main class="col-md-9">
              Tab Nav
            </main>
          </div>
        </section>

        <!-- Content - Layout: 9x3 columns -->
        <section class="reverse-bg">
          <div class="container">
            <div class="row">
              <main class="col-md-9" role="main">
                Tab Content
              </main>
              <aside class="col-md-3" role="complementary">
                Aside content
              </aside>
            </div>
          </div>
        </section> 

        <!-- Footer -->
        (No footer)

      </section>
    </body>' 
  }%}
  {% include styleguide.item with 'styleguideItem': styleguideItem %}




  {# ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ #}
  {# YOUR ORDER - HEADER #}
  {# ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ #}
  {% set styleguideItem = {
    title:        "Header",
    slug:         "your-order-header"
  }%}
  <h2 id="{{ styleguideItem.slug }}" class="bs-headline">{{ styleguideItem.title }}</h2>
  {{ styleguideItem.description }}
  <div class="bs-example">
    {% include '_includes/modules/global/drawer-header.html.twig' with { drawerLabel: 'Your Order', drawerId: 'drawer-order-summary'} %}
  </div>

  {# Markup #}
  {{ highlightMarkup }}
    {% include '_includes/modules/global/drawer-header.html.twig' with { drawerLabel: 'Your Order', drawerId: 'drawer-order-summary' } %}
  {{ endhighlight }}

  {# Twig include #}
  {{ highlightTwig }}
      {{ '{% include ' }} '_includes/modules/global/drawer-header.html.twig' with { drawerLabel: 'Your Order', drawerId: 'drawer-order-summary' }{{ ' %}' }}
  {{ endhighlight }} 


 


  {# ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ #}
  {# YOUR ORDER / TAB NAV #}
  {# ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ #}
  {% set styleguideItem = {
    title:        "Tab Navigation",
    slug:         "your-order-tabs",
    twig:         "_includes/modules/your-order/tab-nav.html.twig",
    path:         "_includes/modules/your-order/tab-nav.html.twig"
  }%}
  {% include styleguide.item with 'styleguideItem': styleguideItem %}


  {# ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ #}
  {# YOUR ORDER / TAB CONTENT STRUCTURE #}
  {# ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ #}
  {% set styleguideItem = {
    title:        "Tab Content Structure",
    slug:         "your-order-tab-content-structure"
  }%}
  <h2 id="{{ styleguideItem.slug }}" class="bs-headline">{{ styleguideItem.title }}</h2>
  {{ styleguideItem.description }}

  <p>Tab content containing the tab panes below</p>

  {{ highlightMarkup }}
  <!-- START - TAB CONTENT -->
  <section class="tab-content">

    <!-- START - TAB PANE - PRODUCTS -->
    <section class="tab-pane active" id="pd-carts">
      <!-- Content -->
    </section>
    <!-- END - TAB PANE - PRODUCT -->

    <!-- START - TAB PANE - INCENTIVES -->
    <section class="tab-pane" id="pd-offers">
      <!-- Content -->
    </section>
    <!-- END - TAB PANE - INCENTIVES -->

  </section>
  <!-- END - TAB CONTENT -->
  {{ endhighlight }}







  {# ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ #}
  {# YOUR ORDER / TAB PANE / CARTS #}
  {# ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ #}
  {% set styleguideItem = {
    title:        "Tab Pane - Cart",
    slug:         "your-order-tab-pane-cart"
  }%}
  {% set offer10Discount = '<h4>$10 Discount</h4>
<p>Get $10 off of all purchases of Anew Platinum Night Cream during this campaign</p>
<a href="#" class="btn btn-default btn-sm" role="button">Add to Order</a>' %}

  <h2 id="{{ styleguideItem.slug }}" class="bs-headline">{{ styleguideItem.title }}</h2>

  <div class="bs-example">
    {% include '_includes/modules/your-order/tab-panel-carts.html.twig' with {offer10Discount: offer10Discount} %}
  </div>

  {# Markup #}
  {{ highlightMarkup }}
    {% include '_includes/modules/your-order/tab-panel-carts.html.twig' with {offer10Discount: offer10Discount} %}
  {{ endhighlight }}

  {# Twig include #}
  {{ highlightTwig }}

      {{ '{% include ' }} '_includes/modules/your-order/tab-panel-carts.html.twig' with {offer10Discount: offer10Discount}{{ ' %}' }}
  {{ endhighlight }} 








  {# ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ #}
  {# YOUR ORDER / SINGLE CART ITEM #}
  {# ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ #}
  {% set styleguideItem = {
    title:        "Single Cart (List Item)",
    slug:         "your-order-tab-pane-single-cart-li"
  }%}
  <h2 id="{{ styleguideItem.slug }}" class="bs-headline">{{ styleguideItem.title }}</h2>
  {{ styleguideItem.description }}
  <div class="bs-example">
      {% include '_includes/groups/your-order/single-cart-li.html.twig' with {indexNum: '1', personName: fpo.person.1, itemCount: '8', total: '90.00', classes: 'd-inline-block', collapsed: false, viewOffers: true} %}
  </div>

  {# Markup #}
  {{ highlightMarkup }}
      {% include '_includes/groups/your-order/single-cart-li.html.twig' with {indexNum: '1', personName: fpo.person.1, itemCount: '8', total: '90.00', classes: 'd-inline-block', collapsed: false, viewOffers: true} %}
  {{ endhighlight }}

  {# Twig include #}
  {{ highlightTwig }}
      {{ '{% include ' }} '_includes/groups/your-order/single-cart-li.html.twig' with {indexNum: '1', personName: fpo.person.1, itemCount: '8', total: '90.00', classes: 'd-inline-block', collapsed: false, viewOffers: true}{{ ' %}' }}
  {{ endhighlight }}  


  {# ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ #}
  {# YOUR ORDER / PERSON (TABLE) #}
  {# ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ #}
  {% set styleguideItem = {
    title:        "Products (Table)",
    slug:         "your-order-tab-pane-products-person-table-structure"
  }%}
  <h2 id="{{ styleguideItem.slug }}" class="bs-headline">{{ styleguideItem.title }}</h2>
  <p>Table containing the rows below</p>

  {{ highlightMarkup }}
  <!-- TABLE OF PRODUCTS -->
  <table class="table mt-4">
    <thead>
      <tr>
        <th class="t-item hidden-xs hidden-sm">Item</th>
        <th class="t-desc invisible">Description</th>
        <th class="t-price">Price</th>
        <th class="t-qty text-right">Qty</th>
      </tr>
    </thead>
    <tbody>

      <!-- Table rows -->

    </tbody>
  </table>
  {{ endhighlight }}






  {# ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ #}
  {# YOUR ORDER / CART / SINGLE PRODUCT #}
  {# ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ #}
  {% set styleguideItem = {
    title:        "Single Product (Table Row)",
    slug:         "your-order-tab-pane-single-product-tr",
    description:  "This is <code>tr</code> gets looped to show products in a person's order."
  }%}
  <h2 id="{{ styleguideItem.slug }}" class="bs-headline">{{ styleguideItem.title }}</h2>
  

  <div class="bs-callout bs-callout-info">
    {{ styleguideItem.description }}
  </div>

  <div class="bs-callout bs-callout-warning">
    The formatting looks strange here because the <code>tr</code> is not within a <code>table</code>. 
  </div>


  
  <div class="bs-example">
    {% include '_includes/groups/your-order/single-product-tr.html.twig' with {
      productName: 'Anew Ultimate Supreme Advanced Performance Créme', 
      img: '/images/fpo/agnew-ultimate.png',
      autoReplenish: null,
      sku: '829-957',
      price: '$30.00',
      classes: 'input-sm'
    }%}
  </div>

  {# Markup #}
  {{ highlightMarkup }}
    {% include '_includes/groups/your-order/single-product-tr.html.twig' with {
      productName: 'Anew Ultimate Supreme Advanced Performance Créme', 
      img: '/images/fpo/agnew-ultimate.png',
      autoReplenish: null,
      sku: '829-957',
      price: '$30.00',
      classes: 'input-sm'
    }%}
  {{ endhighlight }}
  

  {# Twig include #}
  <h3>Variables being passed to template</h3>
  {{ highlightTwig}}
      {{ '{% include ' }} '{{ '_includes/groups/your-order/single-product-tr.html.twig' }}' with {
        productName: 'Anew Ultimate Supreme Advanced Performance Créme', 
        img: '/images/fpo/agnew-ultimate.png',
        autoReplenish: null,
        sku: '829-957',
        price: '$30.00',
        classes: 'input-sm'
    }{{ ' %}' }}
    
  {{ endhighlight }} 

  



    {# ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ #}
  {# YOUR ORDER / TAB PANE / OFFERS #}
  {# ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ #}
  {% set styleguideItem = {
    title:        "Tab Pane - Offers ",
    slug:         "your-order-tab-pane-offers"
  }%}

  <h2 id="{{ styleguideItem.slug }}" class="bs-headline">{{ styleguideItem.title }}</h2>
  <div class="bs-example">
    {% include '_includes/modules/your-order/tab-panel-offers.html.twig' with {offer10Discount: offer10Discount} %}
  </div>

  {# Markup #}
  {{ highlightMarkup }}
    {% include '_includes/modules/your-order/tab-panel-offers.html.twig' with {offer10Discount: offer10Discount} %}
  {{ endhighlight }}

  {# Twig include #}
  {{ highlightTwig }}

      {{ '{% include ' }} '_includes/modules/your-order/tab-panel-offers.html.twig' with {offer10Discount: offer10Discount}{{ ' %}' }}
  {{ endhighlight }}




  {# ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ #}
  {# CHECKOUT / REVIEW / ORDER / TOTAL #}
  {# ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ #}
  {% set styleguideItem = {
    title:        "Order Total",
    slug:         "your-order-total",
    twig:         "components.modules.yourOrder.total",
    path:         components.modules.yourOrder.total
  }%}
  {% include styleguide.item with 'styleguideItem': styleguideItem %}

{% endblock %}
