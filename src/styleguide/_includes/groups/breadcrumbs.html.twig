<div class="bs-docs-section">
  

  <h1 id="breadcrumbs" class="page-header">Breadcrumbs</h1>

  <p class="lead">Indicate the current page's location within a navigational hierarchy.</p>
  <p>Separators are automatically added in CSS through <code>:before</code> and <code>content</code>.</p>
  <div class="bs-example">
    {% include components.groups.navigation.breadcrumbs with {
      'items': [{
          'slug': '#',
          'label': 'Home'
        }
      ]
    }%}
    {% include components.groups.navigation.breadcrumbs with {
      'items': [{
          'slug': '#',
          'label': 'Home'
        }, {
          'slug':  '#',
          'label': 'Library'
        }
      ]
    }%}
    {% include components.groups.navigation.breadcrumbs with {
      'items': [{
          'slug': '#',
          'label': 'Home'
        }, {
          'slug':  '#',
          'label': 'Library'
        }, {
          'slug':  '#',
          'label': 'Data'
        }
      ]
    }%}
  </div>

  {{ highlightMarkup }}
  <ol class="breadcrumb">
    <li><a href="#">Home</a></li>
    <li><a href="#">Library</a></li>
    <li class="active">Data</li>
  </ol>
  {{ endhighlight }}

  <p>Generate this automatically with Twig</p>
  <pre class="language-markup code-toolbar"><code class="language-twig">
    &#123;% include components.groups.navigation.breadcrumbs with {
      'classes':'hidden-xs',
      'items': [{
          'slug': '#',
          'label': 'Home'
        }, {
          'slug':  '#',
          'label': 'Library'
        }, {
          'slug':  '#',
          'label': 'Data'
        }
      ]
    }%}
  {{ endhighlight }}
</div>