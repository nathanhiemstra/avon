{% if styleguideItem.reverseBg %}
  {% set reverseBgClass = ' reverse-bg ' %}
{% endif %}
<h2 id="{{ styleguideItem.slug }}" class="bs-headline{{ reverseBgClass }}">{{ styleguideItem.title }}</h2>
{{ styleguideItem.description }}

{# Example #}
<div class="bs-example{{reverseBgClass}}">
  {% if styleguideItem.snippet %}
    {{ styleguideItem.snippet }}
  {% else %}
    {% include styleguideItem.path %}
  {% endif %}
</div>

{# Markup #}
{{ highlightMarkup }}
  {% if styleguideItem.snippet %}
    {{ styleguideItem.snippet }}
  {% else %}
    {% include styleguideItem.path %}
  {% endif %}
{{ endhighlight }}

