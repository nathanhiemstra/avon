{# styleguide/index.html.twig #}
{% set title = "Styleguide Layouts" %}
{% set slug = "styleguide-layouts" %}
{% extends "styleguide/_layouts/styleguide-full-width.html.twig" %}


{# ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ #}
{# DEFINE BLOCK - STYLEGUIDE CONTENT #}
{# ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ #}
{% block styleguideContent %}





  {# ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ #}
  {# BASE #}
  {# ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ #}
  {% set styleguideItem = {
    title:        "Body",
    slug:         "page-bosy",
    snippet:      '
    <body>
      <section id="avon-poc">
        <a class="sr-only" href="#content">Skip to main content</a>

        <!-- Header -->

        <!-- Content -->

        <!-- Footer -->

      </section>
    </body>'
  }%}
  {% include styleguide.item with 'styleguideItem': styleguideItem %}




  {# ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ #}
  {# COLUMN 12 #}
  {# ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ #}
  {% set styleguideItem = {
    title:        "Full Width",
    slug:         "columns-12",
    snippet:      '
    <div class="container">
      <main role="main">
        <p>' ~ fpo.paragraph ~ '</p>
      </main>
    </div>'
  }%}
  {% include styleguide.item with 'styleguideItem': styleguideItem %}




  {# ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ #}
  {# COLUMN 12 - Slim #}
  {# ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ #}
  {% set styleguideItem = {
    title:        "Full Width - Slim",
    slug:         "columns-12-slim",
    snippet:      '
    <div class="container">
      <main role="main" class="slim">
        <div class="container">
          <p><b>Slim variation of a 12 column layout. Any .container within this layout will have a set max-width.</b></p>
          <p>' ~ fpo.paragraph ~ '</p>
        </div>
      </main>
    </div>'
  }%}
  {% include styleguide.item with 'styleguideItem': styleguideItem %}




  {# ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ #}
  {# COLUMN 9 #}
  {# ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ #}
  {% set styleguideItem = {
    title:        "Column: 9 x (nothing)",
    slug:         "columns-9",
    snippet:      '
    <div class="container">
      <div class="row">
        <main class="col-md-9" role="main">
          <p>' ~ fpo.paragraph ~ '</p>
        </main>
      </div>
    </div>'
  }%}
  {% include styleguide.item with 'styleguideItem': styleguideItem %}


  {# ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ #}
  {# COLUMNS 3x9 #}
  {# ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ #}
  {% set styleguideItem = {
    title:        "Columns: 3x9",
    slug:         "columns-3-x-9",
    snippet:      '
    <div class="container">
      <div class="row">
        <aside class="col-md-3" role="complementary">
          <p>' ~ fpo.paragraph ~ '</p>
        </aside>
        <main class="col-md-9" role="main">
          <p>' ~ fpo.paragraph ~ '</p>
        </main>
      </div>
    </div>'
  }%}
  {% include styleguide.item with 'styleguideItem': styleguideItem %}


  {# ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ #}
  {# COLUMNS 9x3 #}
  {# ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ #}
  {% set styleguideItem = {
    title:        "Columns: 9x3",
    slug:         "columns-9-x-3",
    snippet:      '
    <div class="container">
      <div class="row">
        <main class="col-md-9" role="main">
          <p>' ~ fpo.paragraph ~ '</p>
        </main>
        <aside class="col-md-3" role="complementary">
          <p>' ~ fpo.paragraph ~ '</p>
        </aside>
      </div>
    </div>'
  }%}
  {% include styleguide.item with 'styleguideItem': styleguideItem %}


  {# ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ #}
  {# COLUMNS 9x3 INSIDE SUPER PANEL #}
  {# ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ #}
  {% set styleguideItem = {
    title:        "Super Panel (Full bleed grey background)",
    slug:         "super-panel",
    snippet:      '
    <div class="super-panel">
      <div class="container">
        <div class="row">
          <main class="col-md-9" role="main" style="background: white;">
            <p>' ~ fpo.paragraph ~ '</p>
          </main>
          <aside class="col-md-3" role="complementary">
            <p>' ~ fpo.paragraph ~ '</p>
          </aside>
        </div>
      </div>
    </div>'
  }%}
  {% include styleguide.item with 'styleguideItem': styleguideItem %}






{% endblock %}
