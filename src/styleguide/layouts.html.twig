    title:        "Super Panel (Full bleed grey background)",
    slug:         "super-panel",
    snippet:      '
    <div class="super-panel">
      <div class="container">
        <div class="row">
          <main class="col-md-9" role="main" style="background: white;">
            <p>' ~ fpo.paragraph ~ '</p>
          </main>
          <aside class="col-md-3" role="complementary">
            <p>' ~ fpo.paragraph ~ '</p>
