{# styleguide/index.html.twig #}
{% set title = "Styleguide Layouts" %}
{% set slug = "styleguide-layouts" %}
{% extends "styleguide/_layouts/styleguide-main.html.twig" %}


{# ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ #}
{# DEFINE BLOCK - STYLEGUIDE CONTENT #}
{# ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ #}
{% block styleguideContent %}

 
  <h2 id="{{ styleguideItem.slug }}" class="bs-headline">One Column</h2>
  {{ styleguideItem.description }}
  <div class="bs-example">
    <div class="container">
      <main role="main">
        {{ fpo.paragraph }}
      </main>
    </div>
  </div>
  {{ highlightMarkup }}
  <div class="container">
    <main role="main">
      {{ fpo.paragraph }}
    </main>
  </div>
  {{ endhighlight }}


  <h2 id="{{ styleguideItem.slug }}" class="bs-headline">Two Columns</h2>
  {{ styleguideItem.description }}
  <div class="bs-example">
    <div class="container">
      <div class="row">
        <main class="col-md-9" role="main">
          <p>{{ fpo.paragraph }}</p>
        </main>
        <aside class="col-md-3" role="complementary">
          <p>{{ fpo.paragraph }}</p>
        </aside>
      </div>
    </div>
  </div>
  {{ highlightMarkup }}
  <div class="container">
    <div class="row">
      <main class="col-md-9" role="main">
        <p>{{ fpo.paragraph }}</p>
      </main>
      <aside class="col-md-3" role="complementary">
        <p>{{ fpo.paragraph }}</p>
      </aside>
    </div>
  </div>
  {{ endhighlight }}


{% endblock %}


