{% extends layouts.base %}

{% set sectionClass = 'page--import-customer' %}

{# ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ #}
{# DEFINE BLOCK - CONTENT #}
{# ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ #}
{% block content %}

  <!-- START - MAGNOLIA BLOCK -->
  {% include "_includes/groups/fpo/magnolia-managed-content-block.html.twig" with {
    position: 'top',
    html: '<div class="reverse-bg py-3">
    <p class="m-0 px-0 text-center text-muted">Mangolia Managed Content Block</p>
    </div>'
  } %}
  <!-- END - MAGNOLIA BLOCK -->

  <section class="container container--page">

    {% embed "_layouts/columns-12.html.twig" %}

      {# ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ #}
      {# DEFINE BLOCK - MAIN #}
      {# ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ #}
      {% block main %}

        {% include "_includes/groups/navigation/back-link.twig" with {caption: "All Customers"} %}

        <h2>Import Customers</h2>
        <p class="mb-5 text-muted">Where would you like to import contacts from?</p>

        <hr>

        <!-- START - IMPORT SOURCES -->
        <section>
          {% include "_includes/modules/contacts/contacts-import/import-sources.html.twig" %}
        </section>
        <!-- END - IMPORT SOURCES -->
  </section>

  <section>

    <div class="container">
      <h4>Select the customers you’d like to import from Gmail:</h4>
      <hr>
    </div>

    <div class="row">
      <!-- START - IMPORTABLE ITEMS (TABLE)  -->
      {% include "_includes/modules/contacts/contacts-import/importable-items.html.twig" %}
      <!-- END - IMPORTABLE ITEMS (TABLE) -->
    </div>

    <div class="container container--page">
      <h4>Select the customers you’d like to import from Gmail:</h4>
      <hr>
    </div>

  </section>


  <section class="container">

        <hr>

        <p class="text-muted small">{{fpo.paragraph}}</p>

  </section>

      {% endblock %}

    {% endembed %}

  </div>

  <!-- START - MAGNOLIA BLOCK -->
  {% include "_includes/groups/fpo/magnolia-managed-content-block.html.twig" with {
    position: 'bottom',
    html: '<div class="reverse-bg py-3">
    <p class="m-0 px-0 text-center text-muted">Mangolia Managed Content Block</p>
    </div>'
  } %}
  <!-- END - MAGNOLIA BLOCK -->

{% endblock %}
