{% extends layouts.base %}

{% set sectionClass = 'page--contacts-list' %}

{# ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ #}
{# DEFINE BLOCK - CONTENT #}
{# ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ #}
{% block content %}

  {# ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ #}
  {# DEFINE BLOCK - MAIN #}
  {# ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ #}
  {% block main %}

    <section class="container container--page">

      <header class="row" role="header">
        <div class="col-md-12">
          <h3 class="m-0">Customer Contacts</h3>
        </div>
      </header>

      <hr class="mb-5">



      <div class="table-responsive-rows-and-cols table-customer-list">
        <table class="table table-striped table-last-col-right">
          <thead>
            <tr>
              <th class="t-first-name">First Name</th>
              <th class="t-last-name">Last Name</th>
              <th class="t-phone">Phone</th>
              <th class="t-email">Email</th>
              <th class="t-online-customer">Online Customer</th>
              <th class="t-actions "><span class="d-none">Actions</span></th>
            </tr>
          </thead>
          <tbody>
          {% set row %}
            <tr>
              <td class="t-row-1 t-inline t-first-name"><a href="#">Firstname</a></td>
              <td class="t-row-1 t-inline t-last-name"><a href="#">Lastnameislong</a></td>
              <td class="t-row-3 t-block t-phone">000-000-0000</td>
              <td class="t-row-3 t-block t-email">firstnamelastname@otto.com</td>
              <td class="t-row-2 t-block t-customer-type">
                <span class="customer-type--label">[customer type]</span>
                <span class="customer-type--icon">
                  <span class="lt-icon lt-checkmark"></span>
                </span>
              </td>
              <td class="t-row-1 t-inline t-self-end t-actions">•••</td>
            </tr>
          {% endset %}
            {{ row }}
            {{ row }}
            {{ row }}
          </tbody>
        </table>
      </div>


    </section>

  {% endblock %}

{% endblock %}
