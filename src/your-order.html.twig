{% extends layouts.base %}

{# ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ #}
{# DEFINE BLOCK - CONTENT #}
{# ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ #}
{% block content %}

  {# ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ #}
  {# DEFINE BLOCK - MAIN #}
  {# ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ #}
  {% block main %}

    <!-- START - TAB NAVIGATION -->
    <section class="container container--page">
      <h2>Your Order</h2>
      <div class="row">
        <div class="col-xs-12 col-sm-8 col-sm-offset-2">

          {% include "_includes/modules/your-order/tab-nav.html.twig" %}

        </div>
      </div>
      <!-- /.row -->
    </section>
    <!-- /.container -->
    <!-- END - TAB NAVIGATION -->

    <section>
      <div class="container">
      <hr class="mt-0 mb-0 pb-5">
        <div class="alert alert-danger">
          <strong>Buy $9.99 more to get an extra discount applied to this order!</strong>
        </div>

        {% embed layouts.columns9x3 %}

          {# ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ #}
          {# DEFINE BLOCK - MAIN #}
          {# ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ #}
          {% block main %}

            {% include '_includes/modules/your-order/tab-content.html.twig' %}

          {% endblock %}

          {# ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ #}
          {# DEFINE BLOCK - ASIDE #}
          {# ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ #}
          {% block aside %}

            <!-- ORDER TOTAL -->
            {% include components.modules.yourOrder.total %}

          {% endblock %}
        {% endembed %}

      </div>
    </section>

  {% endblock %}

{% endblock %}
