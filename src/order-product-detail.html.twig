{# product-detail.html.twig #}
{% extends "_layouts/base.html.twig" %}

{% block content %}

<div class="container">
  <div class="row">
    <main class="col-md-9">

      <!-- BREADCRUMBS -->
      {% include components.groups.navigation.breadcrumbs with {
        'classes':'hidden-xs',
        'items': [{'slug': '#', 'label': 'Home'}, {'slug':  '#', 'label': 'Link'}, {'slug':  '#', 'label': 'Link'}, { 'slug':  '#', 'label': 'Link'}]}
      %}

      <!-- PRIMARY PRODUCT INFO -->
      <section>
        <!-- TITlE -->
        <h1>&lt;Product Name&gt;</h1>
        <p>
          <!-- SKU -->
          <span class="mr-4">{{ fpo.sku }}</span>
          
          <!-- RATINGS -->
          {% include components.groups.ratings.unit %}
        </p>
      </section>

      <!-- SECONDARY PRODUCT INFO -->
      <section class="row">
        <div class="col-md-4">
          <!-- PRODUCT IMAGE(S) -->
          <img src="images/utility/placeholder.png" alt="" class="img-responsive">
        </div>
        <div class="col-md-6">

          <!-- PRODUCT DETAILS -->
          <p class="visible-md visible-lg">{{ fpo.paragraph }}</p>
          <p><b>$&lt;13.99&gt;</b></p>
          <p>Regular price: $&lt;19.99&gt;</p>
          <div class="well well-sm d-inline-block">
            <span class="glyphicon glyphicon-ok"></span> In stock
          </div>

          <!-- ASSIGN TO CUSTOMER(S) -->
          <div class="visible-md visible-lg">

            <!-- FORM -->
            <div class="grid-flush clearfix">
              <form role="form">

                <!-- CUSTOMER -->
                <div class="row">
                  <div class="form-group col-sm-2">
                   {% include components.groups.forms.inputAndLabel with {'mainLabel': 'Qty', 'id': 'exampleInput1'} %}
                  </div>
                  <div class="form-group col-sm-6 has-error">
                    <!-- SELECT AND LABEL -->
                    {% include components.groups.forms.selectAndLabel with {'mainLabel': 'Who is this for?', 'id': 'exampleSelect1', errorMessage: 'Error message!'} %}
                  </div>
                  <div class="form-group col-sm-4">
                    <!-- SELECT AND LABEL -->
                    {% include components.groups.forms.selectAndLabel with {'mainLabel': 'Auto Ship', 'id': 'exampleSelect2'} %}
                  </div>
                </div>

                <!-- CUSTOMER -->
                <div class="row">
                  <div class="form-group col-sm-2">
                   {% include components.groups.forms.inputAndLabel with {'mainLabel': 'Qty', 'id': 'exampleInput2'} %}
                  </div>
                  <div class="form-group col-sm-6">
                    <!-- SELECT AND LABEL -->
                    {% include components.groups.forms.selectAndLabel with {'mainLabel': 'Who is this for?', 'id': 'exampleSelect3'} %}
                  </div>
                  <div class="form-group col-sm-4 has-error">
                    <!-- SELECT AND LABEL -->
                    {% include components.groups.forms.selectAndLabel with {'mainLabel': 'Auto Ship', 'id': 'exampleSelect4', errorMessage: 'Error message!'} %}
                  </div>
                </div>
                
              </form>
            </div>
            <hr class="mt-0">
            <p class="text-right"><a href="#">Add new customer</a></p>
          </div>

          <!-- CTA -->
          <p><button type="button" class="btn btn-primary btn-lg">Add to order</button></p>
        </div>
      </section><!-- /.row -->

      <!-- TERTIARY PRODUCT-->
      <section>
        <!-- FEATURES -->
        <h2>Features</h2>
        <p>{{ fpo.paragraph }}</p>
        <p>{{ fpo.paragraph }}</p>
        <p>{{ fpo.paragraph }}</p>
      </section>
    </main>


    <!-- ORDER SUMMARY -->
    <aside class="col-md-3">

      <!-- DRAWER -->
      <div class="drawer drawer-fixed-bottom drawer-order-summary">

        <!-- DRAWER NAV BAR -->
        <section class="navbar navbar-default hidden-md hidden-lg">
          <div class="container pt-4">
            <div class="pull-left">
              <button type="button" class="btn btn-default btn-xs trigger-drawer-order-summary">
                <span class="glyphicon glyphicon-chevron-up"></span> Your order
              </button>
            </div>
            <div class="pull-right">
              <b>$180</b> <small>18 items</small>
            </div>
          </div>
        </section>

        <!-- DRAWER CONTENT -->
        <section class="order-summary">
          <h3>Order Summary</h3>
          <ul class="list-group">
            <li class="list-group-item">
              <dl>
                <dt>&lt;Person&gt;</dt>
                <dd>$&lt;0.00&gt;</dd>
                <dt>&lt;Person&gt;</dt>
                <dd>$&lt;0.00&gt;</dd>
              </dl>
            </li>
            <li class="list-group-item">
              <dl>
                <dt>Order subtotal</dt>
                <dd>$&lt;0.00&gt;</dd>
                <dt>Discount</dt>
                <dd>$&lt;0.00&gt;</dd>
              </dl>
            </li>
            <li class="list-group-item"><a href="#">Order $&lt;00&gt; more for &lt;0&gt;% discount!</a></li>
            <li class="list-group-item"><a href=""><span class="glyphicon glyphicon-plus-sign"></span> Add extras</a></li>
          </ul>
          <p><button type="button" class="btn btn-primary btn-lg">Checkout</button></p>
        </section>
      </div><!-- /.drawer -->
    </aside>
  </div><!-- /.row -->
</div><!-- /.container -->

{% endblock %}